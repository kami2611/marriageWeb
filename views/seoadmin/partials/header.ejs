<!-- SEO Admin Header Partial -->
<header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo & Title -->
      <div class="flex items-center gap-4">
        <a href="/seoadmin/dashboard" class="flex items-center gap-2">
          <div class="w-10 h-10 gradient-bg rounded-lg flex items-center justify-center">
            <i class="ri-search-eye-line text-xl text-white"></i>
          </div>
          <div>
            <h1 class="text-lg font-bold text-gray-900 font-['Playfair_Display']">SEO Admin</h1>
            <p class="text-xs text-gray-500">D'amour Muslim</p>
          </div>
        </a>
      </div>
      
      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-1">
        <a href="/seoadmin/dashboard" 
           class="px-3 py-2 rounded-lg text-sm font-medium transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'bg-pink-50 text-pink-600' : 'text-gray-600 hover:bg-gray-100' %>">
          <i class="ri-dashboard-line mr-1"></i> Dashboard
        </a>
        <a href="/seoadmin/profiles" 
           class="px-3 py-2 rounded-lg text-sm font-medium transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'profiles' ? 'bg-pink-50 text-pink-600' : 'text-gray-600 hover:bg-gray-100' %>">
          <i class="ri-user-search-line mr-1"></i> Profiles
        </a>
        <a href="/seoadmin/blogs" 
           class="px-3 py-2 rounded-lg text-sm font-medium transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'blogs' ? 'bg-pink-50 text-pink-600' : 'text-gray-600 hover:bg-gray-100' %>">
          <i class="ri-article-line mr-1"></i> Blogs
        </a>
        <a href="/seoadmin/global-settings" 
           class="px-3 py-2 rounded-lg text-sm font-medium transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'global' ? 'bg-pink-50 text-pink-600' : 'text-gray-600 hover:bg-gray-100' %>">
          <i class="ri-global-line mr-1"></i> Global SEO
        </a>
      </nav>
      
      <!-- Mobile Menu Button & Logout -->
      <div class="flex items-center gap-2">
        <a href="/seoadmin/logout" 
           class="hidden sm:flex items-center gap-1 px-3 py-2 text-sm text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors">
          <i class="ri-logout-box-line"></i>
          <span>Logout</span>
        </a>
        
        <!-- Mobile Menu Toggle -->
        <button 
          onclick="toggleMobileMenu()"
          class="md:hidden p-2 text-gray-600 hover:bg-gray-100 rounded-lg"
        >
          <i class="ri-menu-line text-xl" id="menuIcon"></i>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobileMenu" class="hidden md:hidden border-t border-gray-200 bg-white">
    <nav class="px-4 py-3 space-y-1">
      <a href="/seoadmin/dashboard" 
         class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm font-medium <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'bg-pink-50 text-pink-600' : 'text-gray-600 hover:bg-gray-100' %>">
        <i class="ri-dashboard-line"></i> Dashboard
      </a>
      <a href="/seoadmin/profiles" 
         class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm font-medium <%= typeof currentPage !== 'undefined' && currentPage === 'profiles' ? 'bg-pink-50 text-pink-600' : 'text-gray-600 hover:bg-gray-100' %>">
        <i class="ri-user-search-line"></i> Profiles
      </a>
      <a href="/seoadmin/blogs" 
         class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm font-medium <%= typeof currentPage !== 'undefined' && currentPage === 'blogs' ? 'bg-pink-50 text-pink-600' : 'text-gray-600 hover:bg-gray-100' %>">
        <i class="ri-article-line"></i> Blogs
      </a>
      <a href="/seoadmin/global-settings" 
         class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm font-medium <%= typeof currentPage !== 'undefined' && currentPage === 'global' ? 'bg-pink-50 text-pink-600' : 'text-gray-600 hover:bg-gray-100' %>">
        <i class="ri-global-line"></i> Global SEO
      </a>
      <hr class="my-2 border-gray-200">
      <a href="/seoadmin/logout" 
         class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm font-medium text-red-600 hover:bg-red-50">
        <i class="ri-logout-box-line"></i> Logout
      </a>
    </nav>
  </div>
</header>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('mobileMenu');
    const icon = document.getElementById('menuIcon');
    menu.classList.toggle('hidden');
    icon.className = menu.classList.contains('hidden') ? 'ri-menu-line text-xl' : 'ri-close-line text-xl';
  }
</script>

<style>
  .gradient-bg {
    background: linear-gradient(135deg, #E91E63 0%, #673AB7 100%);
  }
</style>

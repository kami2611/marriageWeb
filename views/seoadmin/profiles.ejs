<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <title>Profile SEO Management | D'amour Muslim</title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css">
  <style>
    .gradient-bg { background: linear-gradient(135deg, #E91E63 0%, #673AB7 100%); }
    .search-highlight { background-color: #FEF3C7; }
  </style>
</head>
<body class="bg-gray-50 min-h-screen font-['Roboto']">
  <%- include('partials/header', { currentPage: 'profiles' }) %>
  
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 font-['Playfair_Display']">Profile SEO Management</h1>
        <p class="text-gray-600 mt-1">Search and edit SEO data for user profiles</p>
      </div>
      <div class="text-sm text-gray-500">
        Showing <%= profiles.length %> of <%= totalCount %> profiles
      </div>
    </div>
    
    <!-- Search & Filters -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 mb-6">
      <form action="/seoadmin/profiles" method="GET" class="space-y-4">
        <div class="flex flex-col md:flex-row gap-4">
          <!-- Search Input -->
          <div class="flex-1">
            <div class="relative">
              <input 
                type="text" 
                name="search" 
                value="<%= typeof search !== 'undefined' ? search : '' %>"
                placeholder="Search by username, city, ethnicity, or profile slug..."
                class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500"
              >
              <i class="ri-search-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
            </div>
          </div>
          
          <!-- Gender Filter -->
          <select name="gender" class="px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500 bg-white">
            <option value="">All Genders</option>
            <option value="male" <%= typeof gender !== 'undefined' && gender === 'male' ? 'selected' : '' %>>Male</option>
            <option value="female" <%= typeof gender !== 'undefined' && gender === 'female' ? 'selected' : '' %>>Female</option>
          </select>
          
          <!-- SEO Status Filter -->
          <select name="filter" class="px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500 bg-white">
            <option value="">All Status</option>
            <option value="hasCustomSeo" <%= typeof filter !== 'undefined' && filter === 'hasCustomSeo' ? 'selected' : '' %>>Has Custom SEO</option>
            <option value="noCustomSeo" <%= typeof filter !== 'undefined' && filter === 'noCustomSeo' ? 'selected' : '' %>>Needs SEO</option>
            <option value="noIndex" <%= typeof filter !== 'undefined' && filter === 'noIndex' ? 'selected' : '' %>>No-Index</option>
            <option value="approved" <%= typeof filter !== 'undefined' && filter === 'approved' ? 'selected' : '' %>>Approved</option>
          </select>
          
          <button type="submit" class="px-6 py-2.5 gradient-bg text-white rounded-lg font-medium hover:opacity-90 transition-opacity flex items-center gap-2">
            <i class="ri-search-line"></i>
            Search
          </button>
        </div>
      </form>
    </div>
    
    <!-- Profiles Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Profile</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Location</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">SEO Status</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Meta Title</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Last Edit</th>
              <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% if (profiles && profiles.length > 0) { %>
              <% profiles.forEach(profile => { %>
              <tr class="hover:bg-gray-50 transition-colors">
                <!-- Profile Info -->
                <td class="px-4 py-3">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full overflow-hidden bg-gray-100 flex-shrink-0">
                      <% if (profile.profilePic && profile.profilePic.url) { %>
                      <img src="<%= profile.profilePic.url %>" alt="" class="w-full h-full object-cover">
                      <% } else { %>
                      <div class="w-full h-full flex items-center justify-center">
                        <i class="ri-user-line text-gray-400"></i>
                      </div>
                      <% } %>
                    </div>
                    <div>
                      <p class="font-medium text-gray-900 text-sm"><%= profile.username %></p>
                      <p class="text-xs text-gray-500">
                        <%= profile.gender === 'male' ? 'Male' : 'Female' %> Â· <%= profile.age || 'N/A' %> yrs
                      </p>
                    </div>
                  </div>
                </td>
                
                <!-- Location -->
                <td class="px-4 py-3">
                  <p class="text-sm text-gray-900"><%= profile.city || 'N/A' %></p>
                  <p class="text-xs text-gray-500"><%= profile.ethnicity || 'N/A' %></p>
                </td>
                
                <!-- SEO Status -->
                <td class="px-4 py-3">
                  <div class="flex flex-wrap gap-1">
                    <% if (profile.seoSettings && profile.seoSettings.noIndex) { %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                      <i class="ri-eye-off-line mr-1"></i> No-Index
                    </span>
                    <% } else if (profile.isApproved) { %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                      <i class="ri-check-line mr-1"></i> Indexed
                    </span>
                    <% } else { %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                      <i class="ri-time-line mr-1"></i> Pending
                    </span>
                    <% } %>
                    
                    <% if (profile.seoSettings && (profile.seoSettings.customMetaTitle || profile.seoSettings.customMetaDescription)) { %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                      <i class="ri-edit-line mr-1"></i> Custom
                    </span>
                    <% } %>
                  </div>
                </td>
                
                <!-- Meta Title Preview -->
                <td class="px-4 py-3">
                  <p class="text-sm text-gray-700 truncate max-w-[200px]" title="<%= profile.seoSettings && profile.seoSettings.customMetaTitle ? profile.seoSettings.customMetaTitle : 'Auto-generated' %>">
                    <% if (profile.seoSettings && profile.seoSettings.customMetaTitle) { %>
                    <%= profile.seoSettings.customMetaTitle %>
                    <% } else { %>
                    <span class="text-gray-400 italic">Auto-generated</span>
                    <% } %>
                  </p>
                </td>
                
                <!-- Last Edit -->
                <td class="px-4 py-3">
                  <% if (profile.seoSettings && profile.seoSettings.lastSeoEditedAt) { %>
                  <p class="text-sm text-gray-700"><%= new Date(profile.seoSettings.lastSeoEditedAt).toLocaleDateString() %></p>
                  <p class="text-xs text-gray-500"><%= profile.seoSettings.lastSeoEditedBy || 'Unknown' %></p>
                  <% } else { %>
                  <span class="text-xs text-gray-400">Never</span>
                  <% } %>
                </td>
                
                <!-- Actions -->
                <td class="px-4 py-3 text-right">
                  <div class="flex items-center justify-end gap-2">
                    <a 
                      href="/profiles/<%= profile.profileSlug || profile._id %>" 
                      target="_blank"
                      class="p-2 text-gray-500 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
                      title="View Profile"
                    >
                      <i class="ri-external-link-line"></i>
                    </a>
                    <a 
                      href="/seoadmin/profile/<%= profile._id %>" 
                      class="p-2 text-gray-500 hover:text-pink-600 hover:bg-pink-50 rounded-lg transition-colors"
                      title="Edit SEO"
                    >
                      <i class="ri-edit-line"></i>
                    </a>
                  </div>
                </td>
              </tr>
              <% }) %>
            <% } else { %>
            <tr>
              <td colspan="6" class="px-4 py-12 text-center">
                <div class="text-gray-500">
                  <i class="ri-search-line text-4xl text-gray-300 mb-2"></i>
                  <p class="font-medium">No profiles found</p>
                  <p class="text-sm">Try adjusting your search or filters</p>
                </div>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <% if (totalPages > 1) { %>
      <div class="px-4 py-3 border-t border-gray-200 flex items-center justify-between">
        <div class="text-sm text-gray-500">
          Page <%= currentPage %> of <%= totalPages %>
        </div>
        <div class="flex items-center gap-2">
          <% if (currentPage > 1) { %>
          <a href="/seoadmin/profiles?page=<%= currentPage - 1 %>&search=<%= search || '' %>&gender=<%= gender || '' %>&filter=<%= filter || '' %>" 
             class="px-3 py-1.5 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
            <i class="ri-arrow-left-s-line"></i> Previous
          </a>
          <% } %>
          
          <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
          <a href="/seoadmin/profiles?page=<%= i %>&search=<%= search || '' %>&gender=<%= gender || '' %>&filter=<%= filter || '' %>" 
             class="px-3 py-1.5 text-sm rounded-lg transition-colors <%= i === currentPage ? 'gradient-bg text-white' : 'border border-gray-300 hover:bg-gray-50' %>">
            <%= i %>
          </a>
          <% } %>
          
          <% if (currentPage < totalPages) { %>
          <a href="/seoadmin/profiles?page=<%= currentPage + 1 %>&search=<%= search || '' %>&gender=<%= gender || '' %>&filter=<%= filter || '' %>" 
             class="px-3 py-1.5 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
            Next <i class="ri-arrow-right-s-line"></i>
          </a>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
  </main>
</body>
</html>

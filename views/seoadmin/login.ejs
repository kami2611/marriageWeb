<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <title>SEO Admin Login | D'amour Muslim</title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css">
  <style>
    .gradient-bg {
      background: linear-gradient(135deg, #E91E63 0%, #673AB7 100%);
    }
  </style>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center font-['Roboto']">
  <div class="w-full max-w-md px-4">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <!-- Header -->
      <div class="gradient-bg p-6 text-center">
        <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="ri-search-eye-line text-3xl text-white"></i>
        </div>
        <h1 class="text-2xl font-bold text-white font-['Playfair_Display']">SEO Admin Panel</h1>
        <p class="text-white/80 text-sm mt-1">D'amour Muslim</p>
      </div>
      
      <!-- Login Form -->
      <div class="p-8">
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6 flex items-center gap-2">
          <i class="ri-error-warning-line"></i>
          <span><%= error %></span>
        </div>
        <% } %>
        
        <form action="/seoadmin/login" method="POST" class="space-y-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
            <div class="relative">
              <input 
                type="password" 
                name="password" 
                id="password"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition-colors"
                placeholder="Enter SEO admin password"
              >
              <button 
                type="button" 
                onclick="togglePassword()"
                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700"
              >
                <i class="ri-eye-line" id="eyeIcon"></i>
              </button>
            </div>
          </div>
          
          <button 
            type="submit"
            class="w-full gradient-bg text-white py-3 px-4 rounded-lg font-medium hover:opacity-90 transition-opacity flex items-center justify-center gap-2"
          >
            <i class="ri-login-box-line"></i>
            Access SEO Panel
          </button>
        </form>
        
        <div class="mt-6 text-center">
          <a href="/" class="text-sm text-gray-500 hover:text-pink-600 transition-colors">
            <i class="ri-arrow-left-line"></i> Back to Website
          </a>
        </div>
      </div>
    </div>
    
    <p class="text-center text-gray-500 text-xs mt-6">
      For authorized SEO administrators only
    </p>
  </div>
  
  <script>
    function togglePassword() {
      const input = document.getElementById('password');
      const icon = document.getElementById('eyeIcon');
      if (input.type === 'password') {
        input.type = 'text';
        icon.className = 'ri-eye-off-line';
      } else {
        input.type = 'password';
        icon.className = 'ri-eye-line';
      }
    }
  </script>
</body>
</html>

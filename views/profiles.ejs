<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Browse Profiles - Pink Match</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/profiles.css" />
    <!-- Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      /* Fix for the layout issues */
      .profiles-container {
        display: flex;
        gap: 30px;
        margin-top: 30px;
        width: 100%;
      }
      
      .sidebar {
        width: 280px;
        flex-shrink: 0;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        padding: 20px;
        position: sticky;
        top: 20px;
        height: fit-content;
        max-height: calc(100vh - 40px);
        overflow-y: auto;
      }
      
      .profiles-content {
        flex: 1;
        min-width: 0; /* Prevent flex item from overflowing */
      }
      
      /* Ensure the grid doesn't overflow */
      .profiles-grid {
        width: 100%;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
      }
      
      .profiles-grid[data-current-layout="4"] {
        grid-template-columns: repeat(4, 1fr);
      }
      
      /* Responsive adjustments */
      @media (max-width: 1200px) {
        .profiles-grid {
          grid-template-columns: repeat(2, 1fr);
        }
        
        .profiles-grid[data-current-layout="4"] {
          grid-template-columns: repeat(3, 1fr);
        }
      }
      
      @media (max-width: 992px) {
        .profiles-container {
          flex-direction: column;
        }
        
        .sidebar {
          width: 100%;
          position: relative;
          top: 0;
          max-height: none;
        }
        
        .profiles-grid[data-current-layout="4"] {
          grid-template-columns: repeat(2, 1fr);
        }
      }
      
      @media (max-width: 576px) {
        .profiles-grid,
        .profiles-grid[data-current-layout="4"] {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <header class="header">
      <div class="container">
        <div class="logo">
          <a href="/">
            <img src="/imgs/LOGO.png?height=60&width=180" alt="Company Logo" />
          </a>
        </div>
        <div class="auth-buttons">
          <% if (user) { %>
          <div class="account-dropdown">
            <button class="btn btn-account dropdown-toggle">
              <i class="fas fa-user"></i> Account
              <i class="fas fa-chevron-down"></i>
            </button>
            <div class="dropdown-menu">
              <a href="/account/info" class="dropdown-item">
                <i class="fas fa-user-circle"></i> My Account
              </a>
              <a href="/logout" class="dropdown-item">
                <i class="fas fa-sign-out-alt"></i> Logout
              </a>
            </div>
          </div>
          <% } else { %>
          <a href="/register" class="btn btn-signup">Sign Up</a>
          <a href="/login" class="btn btn-login">Login</a>
          <% } %>
        </div>
        <div class="mobile-menu-toggle">
          <i class="fas fa-bars"></i>
        </div>
      </div>
    </header>

    <main>
      <div class="container">
        <div class="profiles-header">
          <h1>Browse Profiles</h1>
          <p>Discover people in our community</p>
        </div>
        
        <!-- Profiles container with sidebar and content -->
        <div class="profiles-container">
          <!-- Sidebar with filters -->
          <div class="sidebar">
            <div class="filter-toggle">
              <i class="fas fa-filter"></i>
              <span>Show Filters</span>
            </div>

            <div class="filter-container active">
              <h3 class="filter-title">Find Your Match</h3>

              <form id="profile-filter-form" class="filter-form">
                <div class="filter-section">
                  <h4>Basic Info</h4>

                  <div class="filter-group">
                    <label for="gender">Gender</label>
                    <select name="gender" id="gender" class="filter-select">
                      <option value="">Any Gender</option>
                      <option value="female" <%= filters && filters.gender === 'female' ? 'selected' : '' %>>Female</option>
                      <option value="male" <%= filters && filters.gender === 'male' ? 'selected' : '' %>>Male</option>
                      <option value="rather not say" <%= filters && filters.gender === 'rather not say' ? 'selected' : '' %>>Rather not say</option>
                    </select>
                  </div>

                  <div class="filter-group">
                    <label>Age Range</label>
                    <div class="range-slider">
                      <div class="range-values">
                        <span id="age-min-value"><%= filters && filters.minAge || '18' %></span> -
                        <span id="age-max-value"><%= filters && filters.maxAge || '60' %></span> years
                      </div>
                      <div class="range-inputs">
                        <input
                          type="range"
                          name="minAge"
                          id="age-range-min"
                          min="18"
                          max="80"
                          value="<%= filters && filters.minAge || '18' %>"
                          class="range-input"
                        />
                        <input
                          type="range"
                          name="maxAge"
                          id="age-range-max"
                          min="18"
                          max="80"
                          value="<%= filters && filters.maxAge || '60' %>"
                          class="range-input"
                        />
                      </div>
                    </div>
                  </div>
                </div>

                <div class="filter-section">
                  <h4>Location</h4>

                  <div class="filter-group">
                    <label for="city">City</label>
                    <input
                      type="text"
                      name="city"
                      id="city"
                      class="filter-input"
                      placeholder="Enter city name"
                      value="<%= filters && filters.city || '' %>"
                    />
                  </div>
                </div>

                <div class="filter-section">
                  <h4>Background</h4>

                  <div class="filter-group">
                    <label for="religion">Religion</label>
                    <select name="religion" id="religion" class="filter-select">
                      <option value="">Any Religion</option>
                      <option value="islam" <%= filters && filters.religion === 'islam' ? 'selected' : '' %>>Islam</option>
                      <option value="hinduism" <%= filters && filters.religion === 'hinduism' ? 'selected' : '' %>>Hinduism</option>
                      <option value="christianity" <%= filters && filters.religion === 'christianity' ? 'selected' : '' %>>Christianity</option>
                      <option value="other" <%= filters && filters.religion === 'other' ? 'selected' : '' %>>Other</option>
                    </select>
                  </div>

                  <div class="filter-group">
                    <label for="cast">Caste</label>
                    <input
                      type="text"
                      name="cast"
                      id="cast"
                      class="filter-input"
                      placeholder="Enter caste"
                      value="<%= filters && filters.cast || '' %>"
                    />
                  </div>
                </div>

                <div class="filter-actions">
                  <button type="submit" class="btn-filter-apply">
                    <i class="fas fa-search"></i> Apply Filters
                  </button>
                  <button type="reset" class="btn-filter-reset">
                    <i class="fas fa-undo"></i> Reset
                  </button>
                </div>
              </form>
            </div>
          </div>
          
          <!-- Profiles content -->
          <div class="profiles-content">
            <% if (filters && Object.keys(filters).some(key => filters[key])) { %>
              <div class="active-filters">
                <% if (filters.gender) { %>
                  <div class="filter-tag">Gender: <%= filters.gender %></div>
                <% } %>
                <% if (filters.minAge && filters.maxAge) { %>
                  <div class="filter-tag">Age: <%= filters.minAge %> - <%= filters.maxAge %></div>
                <% } %>
                <% if (filters.city) { %>
                  <div class="filter-tag">City: <%= filters.city %></div>
                <% } %>
                <% if (filters.religion) { %>
                  <div class="filter-tag">Religion: <%= filters.religion %></div>
                <% } %>
                <% if (filters.cast) { %>
                  <div class="filter-tag">Caste: <%= filters.cast %></div>
                <% } %>
                <a href="/profiles" class="clear-filters">Clear All Filters</a>
              </div>
            <% } %>
            
            <!-- Layout switcher -->
            <div class="layout-switcher">
              <span>Layout:</span>
              <div class="layout-options">
                <button class="layout-btn active" data-columns="3">
                  <i class="fas fa-th-large"></i> 3 Columns
                </button>
                <button class="layout-btn" data-columns="4">
                  <i class="fas fa-th"></i> 4 Columns
                </button>
              </div>
            </div>

            <% if (profiles.length > 0) { %>
              <div class="profiles-grid" data-current-layout="3">
                <% for (let profile of profiles) { %>
                <div class="profile-card">
                  <div class="profile-avatar">
                    <% if (profile.gender && profile.gender.toLowerCase() === 'female') { %>
                    <i class="fas fa-female"></i>
                    <% } else { %>
                    <i class="fas fa-male"></i>
                    <% } %>
                  </div>
                  <div class="profile-info">
                    <h3>
                      <%= profile.name || 'No Name' %>
                      <span class="username">@<%= profile.username %></span>
                    </h3>
                    <div class="profile-details">
                      <% if (profile.gender) { %>
                        <p><i class="fas fa-venus-mars"></i> <%= profile.gender %></p>
                      <% } %>
                      <% if (profile.age) { %>
                        <p><i class="fas fa-birthday-cake"></i> <%= profile.age %> years</p>
                      <% } %>
                      <% if (profile.city) { %>
                        <p><i class="fas fa-map-marker-alt"></i> <%= profile.city %></p>
                      <% } %>
                    </div>
                    <a href="/profiles/<%= profile._id %>" class="profile-link">
                      View Profile <i class="fas fa-arrow-right"></i>
                    </a>
                  </div>
                </div>
                <% } %>
              </div>
            <% } else { %>
              <div class="no-results">
                <i class="fas fa-users-slash"></i>
                <h3>No profiles found</h3>
                <p>Try adjusting your filters to see more results</p>
                <a href="/profiles" class="btn-filter-apply">Clear All Filters</a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h3>About Us</h3>
            <p>We help you find your perfect match.</p>
          </div>
          <div class="footer-section">
            <h3>Contact</h3>
            <p>Email: info@pinkmatch.com</p>
            <p>Phone: (123) 456-7890</p>
          </div>
          <div class="footer-section">
            <h3>Follow Us</h3>
            <div class="social-icons">
              <a href="#"><i class="fab fa-facebook"></i></a>
              <a href="#"><i class="fab fa-instagram"></i></a>
              <a href="#"><i class="fab fa-twitter"></i></a>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2025 Pink Match. All rights reserved.</p>
        </div>
      </div>
    </footer>
    <script src="/js/main.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Layout switcher functionality
        const layoutButtons = document.querySelectorAll(".layout-btn");
        const profilesGrid = document.querySelector(".profiles-grid");

        // Save user preference to localStorage
        const savedLayout = localStorage.getItem("profilesLayout");
        if (savedLayout) {
          changeLayout(savedLayout);

          // Update active button
          layoutButtons.forEach((btn) => {
            btn.classList.toggle("active", btn.dataset.columns === savedLayout);
          });
        }

        layoutButtons.forEach((button) => {
          button.addEventListener("click", function () {
            const columns = this.dataset.columns;

            // Don't do anything if already active
            if (this.classList.contains("active")) return;

            // Update active button
            layoutButtons.forEach((btn) => btn.classList.remove("active"));
            this.classList.add("active");

            // Change layout with animation
            changeLayout(columns);

            // Save preference
            localStorage.setItem("profilesLayout", columns);
          });
        });

        function changeLayout(columns) {
          // Add transition class for animation
          profilesGrid.classList.add("layout-transition");

          // Set current layout attribute for CSS
          profilesGrid.dataset.currentLayout = columns;

          // Remove transition class after animation completes
          setTimeout(() => {
            profilesGrid.classList.remove("layout-transition");
          }, 500);
        }
      });
    </script>
  </body>
</html>
  <script id="sort-functionality">
    document.addEventListener('DOMContentLoaded', function() {
      const sortBySelect = document.getElementById('sortBySelect');

      if (sortBySelect) {
        sortBySelect.addEventListener('change', function() {
          const selectedSort = this.value;

          // Get current URL parameters
          const urlParams = new URLSearchParams(window.location.search);

          // Update or add sortBy parameter
          if (selectedSort === 'newly-created') {
            urlParams.delete('sortBy'); // Default, so remove parameter
          } else {
            urlParams.set('sortBy', selectedSort);
          }

          // Keep current page as 1 when changing sort
          urlParams.set('page', '1');

          // Redirect with new parameters
          const newUrl = window.location.pathname + '?' + urlParams.toString();
          window.location.href = newUrl;
        });
      }
    });
  </script>

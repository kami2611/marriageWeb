<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Account - date-It</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="/css/edit-account.css" />
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body>
  <header class="header">
    <div class="container">
      <div class="logo">
        <a href="/">
          <img src="/imgs/LOGO.png" alt="Company Logo" />
        </a>
      </div>
      <div class="auth-buttons">
        <% if (user) { %>
        <a href="/logout" class="btn btn-signup">Logout</a>
        <% } else { %>
        <a href="/register" class="btn btn-signup">Sign Up</a>
        <a href="/login" class="btn btn-login">Login</a>
        <% } %>
      </div>
      <div class="mobile-menu-toggle">
        <i class="fas fa-bars"></i>
      </div>
    </div>
  </header>

  <main>
    <div class="container">
      <div class="edit-account-container">
        <div class="page-header">
          <h1>Edit Your Account</h1>
          <p>Update your personal information</p>
        </div>

        <% if (typeof msg !== "undefined" && msg) { %>
          <div class="info-message">
            <i class="fas fa-info-circle info-icon"></i>
            <%= msg %>
          </div>
        <% } %>

        <div class="account-card">
          <div class="account-nav">
            <a href="/account" class="nav-item">
              <i class="fas fa-user"></i> Profile
            </a>
            <a href="/account/edit" class="nav-item active">
              <i class="fas fa-edit"></i> Edit Profile
            </a>
          </div>

          <div class="account-content">
            <form action="/account/edit" method="POST" enctype="multipart/form-data" class="edit-form">
              <div class="form-row">
                <div class="form-group">
                  <label for="name">
                    <i class="fas fa-user"></i> Name
                  </label>
                  <input type="text" id="name" name="name" value="<%= userData.name %>" required />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="age">
                    <i class="fas fa-user"></i> age
                  </label>
                  <input type="number" id="age" name="age" min="15" max="80" value="<%= userData.age %>" required />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="religion">
                    <i class="fas fa-user"></i> Religion
                  </label>
                  <select id="religion" name="religion" class="select-styled">
                    <option value="">Select Religion</option>
                    <option value="islam" <%= userData.religion === 'islam' ? 'selected' : '' %>>Islam</option>
                    <option value="hinduism" <%= userData.religion === 'hinduism' ? 'selected' : '' %>>Hinduism</option>
                    <option value="christianity" <%= userData.religion === 'christianity' ? 'selected' : '' %>>Christianity</option>
                    <option value="sikhism" <%= userData.religion === 'sikhism' ? 'selected' : '' %>>Sikhism</option>
                    <option value="buddhism" <%= userData.religion === 'buddhism' ? 'selected' : '' %>>Buddhism</option>
                    <option value="judaism" <%= userData.religion === 'judaism' ? 'selected' : '' %>>Judaism</option>
                    <option value="other" <%= userData.religion === 'other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>

              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="caste">
                    <i class="fas fa-user"></i> caste
                  </label>
                  <select id="caste" name="caste" class="select-styled">
                    <option value="">Select caste</option>
                    <option value="syed" <%= userData.caste === 'syed' ? 'selected' : '' %>>Syed</option>
                    <option value="sheikh" <%= userData.caste === 'sheikh' ? 'selected' : '' %>>Sheikh</option>
                    <option value="pathan" <%= userData.caste === 'pathan' ? 'selected' : '' %>>Pathan</option>
                    <option value="rajput" <%= userData.caste === 'rajput' ? 'selected' : '' %>>Rajput</option>
                    <option value="mughal" <%= userData.caste === 'mughal' ? 'selected' : '' %>>Mughal</option>
                    <option value="gujjar" <%= userData.caste === 'gujjar' ? 'selected' : '' %>>Gujjar</option>
                    <option value="jutt" <%= userData.caste === 'jutt' ? 'selected' : '' %>>Jutt</option>
                    <option value="ansari" <%= userData.caste === 'ansari' ? 'selected' : '' %>>Ansari</option>
                    <option value="awwan" <%= userData.caste === 'awwan' ? 'selected' : '' %>>Awwan</option>
                    <option value="qureshi" <%= userData.caste === 'qureshi' ? 'selected' : '' %>>Qureshi</option>
                    <option value="malik" <%= userData.caste === 'malik' ? 'selected' : '' %>>Malik</option>
                    <option value="choudhary" <%= userData.caste === 'choudhary' ? 'selected' : '' %>>Choudhary</option>
                    <option value="other" <%= userData.caste === 'other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="adress">
                    <i class="fas fa-home"></i> Address
                  </label>
                  <input type="text" id="adress" name="adress" value="<%= userData.adress %>" />
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="country">
                    <i class="fas fa-globe"></i> Country
                  </label>
                  <select id="country" name="country" class="select-styled" required data-selected="<%= userData.country || '' %>">
                    <option value="">Select Country</option>
                    <option value="Pakistan" <%= userData.country === 'Pakistan' ? 'selected' : '' %>>Pakistan</option>
                    <option value="India" <%= userData.country === 'India' ? 'selected' : '' %>>India</option>
                    <option value="UK" <%= userData.country === 'UK' ? 'selected' : '' %>>United Kingdom</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="state">
                    <i class="fas fa-map"></i> State/Province
                  </label>
                  <select id="state" name="state" class="select-styled" required data-selected="<%= userData.state || '' %>">
                    <option value="">Select State</option>
                  </select>
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="city">
                    <i class="fas fa-map-marker-alt"></i> City
                  </label>
                  <select id="city" name="city" class="select-styled" required data-selected="<%= userData.city || '' %>">
                    <option value="">Select City</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="contact">
                    <i class="fas fa-phone"></i> Contact
                  </label>
                  <input type="number" id="contact" name="contact" value="<%= userData.contact %>" />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="gender">
                    <i class="fas fa-venus-mars"></i> Gender
                  </label>
                  <select id="gender" name="gender" class="select-styled">
                    <option value="male" <%= userData.gender === "male" ? "selected" : "" %>>Male</option>
                    <option value="female" <%= userData.gender === "female" ? "selected" : "" %>>Female</option>
                    <option value="rather not say" <%= userData.gender === "rather not say" ? "selected" : "" %>>Rather not say</option>
                  </select>
                </div>
              </div>
              <div class="form-row">

                <div class="form-group">
                  <label for="profilePic">
                    <i class="fas fa-image"></i> Profile Image
                  </label>
                  <div class="custom-file-input">
                    <div class="file-input-button">
                      <i class="fas fa-upload"></i> Choose Image
                    </div>
                    <input type="file" id="profilePic" name="profilePic" accept="image/*" style="display:none;" />
                    <span class="file-name">No file chosen</span>
                    <button type="button" id="removeImageBtn" style="display:none; margin-left:10px;">Remove</button>
                  </div>
                  <div id="imagePreview" style="margin-top:10px;">
                    <% if (userData.profilePic && userData.profilePic.url) { %>
                    <img src="<%= userData.profilePic.url %>" alt="Current Profile" style="max-width:120px; border-radius:8px;" id="currentProfileImg">
                    <% } %>
                  </div>
                </div>
              </div>
              <div class="form-actions">
                <a href="/account" class="btn btn-cancel">Cancel</a>
                <button type="submit" class="btn btn-save">
                  <i class="fas fa-save"></i> Save Changes
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h3>About Us</h3>
          <p>We make knowing eachother secure that ever and find the perfect match for you</p>
        </div>
        <div class="footer-section">
          <h3>Contact</h3>
          <p>Email: hppavilion120000@gmail.com</p>
          <p>Phone: +923065896726</p>
        </div>
        <div class="footer-section">
          <h3>Follow Us</h3>
          <div class="social-icons">
            <a href="#"><i class="fab fa-facebook"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2025 date-It. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      // Mobile menu toggle
      const menuToggle = document.querySelector(".mobile-menu-toggle");
      const authButtons = document.querySelector(".auth-buttons");

      if (menuToggle && authButtons) {
        menuToggle.addEventListener("click", function() {
          authButtons.classList.toggle("active");
        });
      }

      // Close menu when clicking outside
      document.addEventListener("click", function(event) {
        if (
          !event.target.closest(".mobile-menu-toggle") &&
          !event.target.closest(".auth-buttons") &&
          authButtons &&
          authButtons.classList.contains("active")
        ) {
          authButtons.classList.remove("active");
        }
      });

      // Form validation
      const form = document.querySelector('.edit-form');
      if (form) {
        form.addEventListener('submit', function(e) {
          const nameInput = document.getElementById('name');
          const cityInput = document.getElementById('city');

          if (!nameInput.value.trim()) {
            e.preventDefault();
            nameInput.classList.add('error');
            alert('Please enter your name');
            return;
          }

          if (!cityInput.value.trim()) {
            e.preventDefault();
            cityInput.classList.add('error');
            alert('Please enter your city');
            return;
          }
        });

        // Remove error class on input
        const inputs = form.querySelectorAll('input, select');
        inputs.forEach(input => {
          input.addEventListener('input', function() {
            this.classList.remove('error');
          });
        });
      }

      // Profile image preview and remove
      const fileInput = document.getElementById('profilePic');
      const fileInputButton = document.querySelector('.file-input-button');
      const fileNameSpan = document.querySelector('.file-name');
      const imagePreview = document.getElementById('imagePreview');
      const removeImageBtn = document.getElementById('removeImageBtn');
      const currentProfileImg = document.getElementById('currentProfileImg');

      // Open file dialog when clicking the custom button
      if (fileInputButton) {
        fileInputButton.addEventListener('click', function(e) {
          fileInput.click();
        });
      }

      // Show preview and file name when a file is selected
      fileInput.addEventListener('change', function(e) {
        const file = this.files[0];
        if (file) {
          fileNameSpan.textContent = file.name;
          removeImageBtn.style.display = 'inline-block';

          // Show preview
          const reader = new FileReader();
          reader.onload = function(e) {
            imagePreview.innerHTML = `<img src="${e.target.result}" alt="Preview" style="max-width:120px; border-radius:8px;">`;
          };
          reader.readAsDataURL(file);
        } else {
          fileNameSpan.textContent = 'No file chosen';
          removeImageBtn.style.display = 'none';
          // Restore current image if exists
          if (currentProfileImg) {
            imagePreview.innerHTML = currentProfileImg.outerHTML;
          } else {
            imagePreview.innerHTML = '';
          }
        }
      });

      // Remove selected image
      removeImageBtn.addEventListener('click', function() {
        fileInput.value = '';
        fileNameSpan.textContent = 'No file chosen';
        removeImageBtn.style.display = 'none';
        // Restore current image if exists
        if (currentProfileImg) {
          imagePreview.innerHTML = currentProfileImg.outerHTML;
        } else {
          imagePreview.innerHTML = '';
        }
      });
    });

    const countryStateCity = {
      Pakistan: {
        Punjab: ["Lahore", "Faisalabad", "Rawalpindi", "Multan", "Gujranwala", "Sialkot", "Bahawalpur", "Sargodha", "Rahim Yar Khan", "Gujrat", "Sheikhupura", "Jhelum", "Kasur", "Okara", "Vehari", "Mandi Bahauddin", "Chiniot", "Toba Tek Singh", "Muzaffargarh", "Khanewal", "Dera Ghazi Khan", "Bahawalnagar", "Mianwali", "Pakpattan", "Lodhran", "Hafizabad", "Narowal", "Attock", "Sahiwal", "Other"],
        Sindh: ["Karachi", "Hyderabad", "Sukkur", "Larkana", "Nawabshah", "Mirpur Khas", "Shikarpur", "Jacobabad", "Dadu", "Khairpur", "Ghotki", "Other"],
        KPK: ["Peshawar", "Abbottabad", "Mardan", "Swat", "Kohat", "Bannu", "Dera Ismail Khan", "Charsadda", "Nowshera", "Mansehra", "Other"],
        Balochistan: ["Quetta", "Turbat", "Gwadar", "Khuzdar", "Sibi", "Zhob", "Loralai", "Chaman", "Other"],
        "Azad Kashmir": ["Muzaffarabad", "Mirpur", "Kotli", "Bagh", "Rawalakot", "Other"],
      },
      India: {
        Maharashtra: ["Mumbai", "Pune", "Nagpur", "Other"],
        Delhi: ["New Delhi", "Other"],
        Punjab: ["Amritsar", "Ludhiana", "Other"],
        "Uttar Pradesh": ["Lucknow", "Kanpur", "Other"],
        "West Bengal": ["Kolkata", "Other"],
        Other: ["Other"]
      },
      UK: {
        England: ["London", "Manchester", "Birmingham", "Liverpool", "Leeds", "Sheffield", "Bristol", "Other"],
        Scotland: ["Edinburgh", "Glasgow", "Aberdeen", "Dundee", "Other"],
        Wales: ["Cardiff", "Swansea", "Newport", "Other"],
        "Northern Ireland": ["Belfast", "Derry", "Lisburn", "Other"]
      }
    };

    function populateStates(country) {
      const stateSelect = document.getElementById('state');
      stateSelect.innerHTML = '<option value="">Select State</option>';
      if (countryStateCity[country]) {
        Object.keys(countryStateCity[country]).forEach(state => {
          stateSelect.innerHTML += `<option value="${state}" >${state}</option>`;
        });
      }
    }

    function populateCities(country, state) {
      const citySelect = document.getElementById('city');
      citySelect.innerHTML = '<option value="">Select City</option>';
      if (countryStateCity[country] && countryStateCity[country][state]) {
        countryStateCity[country][state].forEach(city => {
          citySelect.innerHTML += `<option value="${city}">${city}</option>`;
        });
      }
    }

    document.addEventListener("DOMContentLoaded", function() {
      const countrySelect = document.getElementById('country');
      const stateSelect = document.getElementById('state');
      const citySelect = document.getElementById('city');

      // Pre-populate state and city if editing
      if (countrySelect.value) {
        populateStates(countrySelect.value);
        if (stateSelect && stateSelect.getAttribute('data-selected')) {
          stateSelect.value = stateSelect.getAttribute('data-selected');
          populateCities(countrySelect.value, stateSelect.value);
        }
        if (citySelect && citySelect.getAttribute('data-selected')) {
          citySelect.value = citySelect.getAttribute('data-selected');
        }
      }

      countrySelect.addEventListener('change', function() {
        populateStates(this.value);
        citySelect.innerHTML = '<option value="">Select City</option>';
      });

      stateSelect.addEventListener('change', function() {
        populateCities(countrySelect.value, this.value);
      });
    });
  </script>
</body>

</html>
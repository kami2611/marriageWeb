<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Account - damourmuslim</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="/css/edit-account.css" />
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body>
  <header class="header">
    <div class="container">
      <div class="logo">
        <a href="/">
          <img
              src="https://res.cloudinary.com/dhuc2plh0/image/upload/v1752814079/logo_golden_final_company_u9acij.svg"
              alt="Company Logo"
            />
        </a>
      </div>
      <div class="auth-buttons">
        <% if (user) { %>
        <a href="/logout" class="btn btn-signup">Logout</a>
        <% } else { %>
        <a href="/register" class="btn btn-signup">Sign Up</a>
        <a href="/login" class="btn btn-login">Login</a>
        <% } %>
      </div>
      <div class="mobile-menu-toggle">
        <i class="fas fa-bars"></i>
      </div>
    </div>
  </header>

  <main>
    <div class="container">
      <div class="edit-account-container">
        <div class="page-header">
          <h1>Edit Your Account</h1>
          <p>Update your personal information</p>
        </div>

        <% if (typeof msg !== "undefined" && msg) { %>
          <div class="info-message">
            <i class="fas fa-info-circle info-icon"></i>
            <%= msg %>
          </div>
        <% } %>

        <div class="account-card">
          <div class="account-nav">
            <a href="/account" class="nav-item">
              <i class="fas fa-user"></i> Profile
            </a>
            <a href="/account/edit" class="nav-item active">
              <i class="fas fa-edit"></i> Edit Profile
            </a>
          </div>

          <div class="account-content">
            <form action="/account/edit" method="POST" enctype="multipart/form-data" class="edit-form">
              <div class="form-row">
        <div class="form-group">
          <label for="waliMyContactDetails"><i class="fas fa-user-shield"></i> Wali's Contact Details</label>
          <input type="text" id="waliMyContactDetails" name="waliMyContactDetails" value="<%= userData.waliMyContactDetails || '' %>">
        </div>
      </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="name">
                    <i class="fas fa-user"></i>Name <span style="color:red">*</span>
                  </label>
                  <input type="text" id="name" name="name" value="<%= userData.name %>" required />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="age">
                    <i class="fas fa-user"></i>Age <span style="color:red">*</span> 
                  </label>
                  <input type="number" id="age" name="age" min="15" max="80" value="<%= userData.age %>" required />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="religion">
                    <i class="fas fa-user"></i> Religion <span style="color:red">*</span>
                  </label>
                  <select id="religion" name="religion" class="select-styled" required>
                    <option value="">Select Religion</option>
                    <option value="islam" <%= userData.religion === 'islam' ? 'selected' : '' %>>Islam</option>
                    <option value="hinduism" <%= userData.religion === 'hinduism' ? 'selected' : '' %>>Hinduism</option>
                    <option value="christianity" <%= userData.religion === 'christianity' ? 'selected' : '' %>>Christianity</option>
                    <option value="sikhism" <%= userData.religion === 'sikhism' ? 'selected' : '' %>>Sikhism</option>
                    <option value="buddhism" <%= userData.religion === 'buddhism' ? 'selected' : '' %>>Buddhism</option>
                    <option value="judaism" <%= userData.religion === 'judaism' ? 'selected' : '' %>>Judaism</option>
                    <option value="other" <%= userData.religion === 'other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="caste">
                    <i class="fas fa-user"></i> Caste <span style="color:red">*</span>
                  </label>
                  <select id="caste" name="caste" class="select-styled" required>
                    <option value="">Select caste</option>
                    <option value="syed" <%= userData.caste === 'syed' ? 'selected' : '' %>>Syed</option>
                    <option value="sheikh" <%= userData.caste === 'sheikh' ? 'selected' : '' %>>Sheikh</option>
                    <option value="pathan" <%= userData.caste === 'pathan' ? 'selected' : '' %>>Pathan</option>
                    <option value="rajput" <%= userData.caste === 'rajput' ? 'selected' : '' %>>Rajput</option>
                    <option value="mughal" <%= userData.caste === 'mughal' ? 'selected' : '' %>>Mughal</option>
                    <option value="gujjar" <%= userData.caste === 'gujjar' ? 'selected' : '' %>>Gujjar</option>
                    <option value="jutt" <%= userData.caste === 'jutt' ? 'selected' : '' %>>Jutt</option>
                    <option value="ansari" <%= userData.caste === 'ansari' ? 'selected' : '' %>>Ansari</option>
                    <option value="awwan" <%= userData.caste === 'awwan' ? 'selected' : '' %>>Awwan</option>
                    <option value="qureshi" <%= userData.caste === 'qureshi' ? 'selected' : '' %>>Qureshi</option>
                    <option value="malik" <%= userData.caste === 'malik' ? 'selected' : '' %>>Malik</option>
                    <option value="choudhary" <%= userData.caste === 'choudhary' ? 'selected' : '' %>>Choudhary</option>
                    <option value="other" <%= userData.caste === 'other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="adress">
                    <i class="fas fa-home"></i> Address <span style="color:red">*</span>
                  </label>
                  <input type="text" id="adress" name="adress" value="<%= userData.adress %>" required />
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="country">
                    <i class="fas fa-globe"></i> Country <span style="color:red">*</span>
                  </label>
                  <select id="country" name="country" class="select-styled" required data-selected="<%= userData.country || '' %>">
                    <option value="">Select Country</option>
                    <option value="Pakistan" <%= userData.country === 'Pakistan' ? 'selected' : '' %>>Pakistan</option>
                    <option value="India" <%= userData.country === 'India' ? 'selected' : '' %>>India</option>
                    <option value="UK" <%= userData.country === 'UK' ? 'selected' : '' %>>United Kingdom</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="state">
                    <i class="fas fa-map"></i> State/Province <span style="color:red">*</span>
                  </label>
                  <select id="state" name="state" class="select-styled" required data-selected="<%= userData.state || '' %>">
                    <option value="">Select State</option>
                  </select>
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="city">
                    <i class="fas fa-map-marker-alt"></i> City <span style="color:red">*</span>
                  </label>
                  <select id="city" name="city" class="select-styled" required data-selected="<%= userData.city || '' %>">
                    <option value="">Select City</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="contact">
                    <i class="fas fa-phone"></i> Contact 
                  </label>
                  <div style="display: flex; align-items: center;">
                    <span id="countryCode" style="margin-right: 6px; min-width: 38px; font-weight: bold;">
                      <% if (userData.country === 'Pakistan') { %>+92
                      <% } else if (userData.country === 'India') { %>+91
                      <% } else if (userData.country === 'UK') { %>+44
                      <% } else { %>+92
                      <% } %>
                    </span>
                    <input type="number" id="contact" name="contact" value="<%= userData.contact %>" style="flex:1;"/>
                  </div>
                </div>
              </div>
              
              <!-- New fields for siblings and birth place -->
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="siblings"><i class="fas fa-users"></i> Siblings</label>
                  <input type="number" id="siblings" name="siblings" min="0" value="<%= typeof userData.siblings !== 'undefined' ? userData.siblings : 0 %>">
                </div>
                <div class="form-group">
                  <label for="birthPlace"><i class="fas fa-map-marker-alt"></i> Birth Place</label>
                  <input type="text" id="birthPlace" name="birthPlace" value="<%= userData.birthPlace || '' %>">
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="gender">
                    <i class="fas fa-venus-mars"></i> Gender <span style="color:red">*</span>
                  </label>
                  <select id="gender" name="gender" class="select-styled" required>
                    <option value="male" <%= userData.gender === "male" ? "selected" : "" %>>Male</option>
                    <option value="female" <%= userData.gender === "female" ? "selected" : "" %>>Female</option>
                    <option value="rather not say" <%= userData.gender === "rather not say" ? "selected" : "" %>>Rather not say</option>
                  </select>
                </div>
              </div>
              <div class="form-row">

                <div class="form-group">
                  <label for="profilePic">
                    <i class="fas fa-image"></i> Profile Image
                  </label>
                  <div class="custom-file-input">
                    <div class="file-input-button">
                      <i class="fas fa-upload"></i> Choose Image
                    </div>
                    <input type="file" id="profilePic" name="profilePic" accept="image/*" style="display:none;" />
                    <span class="file-name">No file chosen</span>
                    <button type="button" id="removeImageBtn" style="display:none; margin-left:10px;">Remove</button>
                  </div>
                  <div id="imagePreview" style="margin-top:10px;">
                    <% if (userData.profilePic && userData.profilePic.url) { %>
                    <img src="<%= userData.profilePic.url %>" alt="Current Profile" style="max-width:120px; border-radius:8px;" id="currentProfileImg">
                    <% } %>
                  </div>
                </div>
              </div>
              
              <!-- Additional fields for physical attributes, education, and other details -->
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="eyeColor">
                    <i class="fas fa-eye"></i> Eye Color
                  </label>
                  <select id="eyeColor" name="eyeColor" class="select-styled">
                    <option value="">Select Eye Color</option>
                    <option value="black" <%= userData.eyeColor === 'black' ? 'selected' : '' %>>Black</option>
                    <option value="brown" <%= userData.eyeColor === 'brown' ? 'selected' : '' %>>Brown</option>
                    <option value="grey" <%= userData.eyeColor === 'grey' ? 'selected' : '' %>>Grey</option>
                    <option value="other" <%= userData.eyeColor === 'other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="hairColor">
                    <i class="fas fa-paint-brush"></i> Hair Color
                  </label>
                  <select id="hairColor" name="hairColor" class="select-styled">
                    <option value="">Select Hair Color</option>
                    <option value="black" <%= userData.hairColor === 'black' ? 'selected' : '' %>>Black</option>
                    <option value="brown" <%= userData.hairColor === 'brown' ? 'selected' : '' %>>Brown</option>
                    <option value="blonde" <%= userData.hairColor === 'blonde' ? 'selected' : '' %>>Blonde</option>
                  </select>
                </div>
              </div>

              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="complexion">
                    <i class="fas fa-user"></i> Complexion
                  </label>
                  <select id="complexion" name="complexion" class="select-styled">
                    <option value="">Select Complexion</option>
                    <option value="fair" <%= userData.complexion === 'fair' ? 'selected' : '' %>>Fair</option>
                    <option value="wheatish" <%= userData.complexion === 'wheatish' ? 'selected' : '' %>>Wheatish</option>
                    <option value="dark" <%= userData.complexion === 'dark' ? 'selected' : '' %>>Dark</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="build">
                    <i class="fas fa-dumbbell"></i> Build
                  </label>
                  <select id="build" name="build" class="select-styled">
                    <option value="">Select Build</option>
                    <option value="slim" <%= userData.build === 'slim' ? 'selected' : '' %>>Slim</option>
                    <option value="average" <%= userData.build === 'average' ? 'selected' : '' %>>Average</option>
                    <option value="athletic" <%= userData.build === 'athletic' ? 'selected' : '' %>>Athletic</option>
                    <option value="heavy" <%= userData.build === 'heavy' ? 'selected' : '' %>>Heavy</option>
                  </select>
                </div>
              </div>

              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="height">
                    <i class="fas fa-ruler-vertical"></i> Height (cm)
                  </label>
                  <input type="number" id="height" name="height" min="50" max="250" value="<%= userData.height || '' %>">
                </div>
                <div class="form-group">
                  <label for="languagesSpoken">
                    <i class="fas fa-language"></i> Languages Spoken
                  </label>
                  <input type="text" id="languagesSpoken" name="languagesSpoken" value="<%= userData.languagesSpoken ? userData.languagesSpoken.join(', ') : '' %>" placeholder="e.g. Urdu, English, Arabic">
                  <small>Comma separated</small>
                </div>
              </div>

              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="education">
                    <i class="fas fa-graduation-cap"></i> Education
                  </label>
                  <input type="text" id="education" name="education" value="<%= userData.education || '' %>">
                </div>
                <div class="form-group">
                  <label for="nationality">
                    <i class="fas fa-flag"></i> Nationality
                  </label>
                  <input type="text" id="nationality" name="nationality" value="<%= userData.nationality || '' %>">
                </div>
              </div>

              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="ethnicity">
                    <i class="fas fa-users"></i> Ethnicity
                  </label>
                  <select id="ethnicity" name="ethnicity" class="select-styled">
                    <option value="">Select Ethnicity</option>
                    <option value="asian" <%= userData.ethnicity === 'asian' ? 'selected' : '' %>>Asian</option>
                    <option value="african" <%= userData.ethnicity === 'african' ? 'selected' : '' %>>African</option>
                    <option value="caucasian" <%= userData.ethnicity === 'caucasian' ? 'selected' : '' %>>Caucasian</option>
                    <option value="latino" <%= userData.ethnicity === 'latino' ? 'selected' : '' %>>Latino</option>
                    <option value="arab" <%= userData.ethnicity === 'arab' ? 'selected' : '' %>>Arab</option>
                    <option value="other" <%= userData.ethnicity === 'other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="maritalStatus">
                    <i class="fas fa-ring"></i> Marital Status
                  </label>
                  <select id="maritalStatus" name="maritalStatus" class="select-styled">
                    <option value="">Select Status</option>
                    <option value="false" <%= userData.maritalStatus === false ? 'selected' : '' %>>Unmarried</option>
                    <option value="true" <%= userData.maritalStatus === true ? 'selected' : '' %>>Married</option>
                  </select>
                </div>
              </div>

              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="disability">
                    <i class="fas fa-wheelchair"></i> Disability
                  </label>
                  <select id="disability" name="disability" class="select-styled">
                    <option value="no" <%= userData.disability === 'no' ? 'selected' : '' %>>No</option>
                    <option value="yes" <%= userData.disability !== 'no' && userData.disability ? 'selected' : '' %>>Yes</option>
                  </select>
                  <input type="text" id="disabilityDetail" name="disabilityDetail" placeholder="If yes, specify" value="<%= userData.disability !== 'no' ? userData.disability : '' %>" style="margin-top:8px; display:<%= userData.disability !== 'no' && userData.disability ? 'block' : 'none' %>;">
                </div>
                <div class="form-group">
                  <label for="smoker">
                    <i class="fas fa-smoking"></i> Smoker
                  </label>
                  <select id="smoker" name="smoker" class="select-styled">
                    <option value="">Select</option>
                    <option value="false" <%= userData.smoker === false ? 'selected' : '' %>>No</option>
                    <option value="true" <%= userData.smoker === true ? 'selected' : '' %>>Yes</option>
                  </select>
                </div>
              </div>

              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="bornMuslim">
                    <i class="fas fa-mosque"></i> Born Muslim
                  </label>
                  <select id="bornMuslim" name="bornMuslim" class="select-styled">
                    <option value="">Select</option>
                    <option value="true" <%= userData.bornMuslim === true ? 'selected' : '' %>>Yes</option>
                    <option value="false" <%= userData.bornMuslim === false ? 'selected' : '' %>>No</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="islamicSect">
                    <i class="fas fa-pray"></i> Islamic Sect/Fiqh
                  </label>
                  <input type="text" id="islamicSect" name="islamicSect" value="<%= userData.islamicSect || '' %>">
                </div>
              </div>
              
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="fatherName"><i class="fas fa-user"></i> Father Name</label>
                  <input type="text" id="fatherName" name="fatherName" value="<%= userData.fatherName || '' %>">
                </div>
                <div class="form-group">
                  <label for="motherName"><i class="fas fa-user"></i> Mother Name</label>
                  <input type="text" id="motherName" name="motherName" value="<%= userData.motherName || '' %>">
                </div>
              </div>
              
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="fatherProfession"><i class="fas fa-briefcase"></i> Father Profession</label>
                  <input type="text" id="fatherProfession" name="fatherProfession" value="<%= userData.fatherProfession || '' %>">
                </div>
                <div class="form-group">
                  <label for="aboutMe"><i class="fas fa-info-circle"></i> About Me</label>
                  <input type="text" id="aboutMe" name="aboutMe" value="<%= userData.aboutMe || '' %>">
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="describeNature"><i class="fas fa-info-circle"></i> Describe Nature</label>
                  <input type="text" id="describeNature" name="describeNature" value="<%= userData.describeNature || '' %>">
                </div>
                <div class="form-group">
                  <label for="whoCompletedProfile"><i class="fas fa-user"></i> Who Completed Profile</label>
                  <input type="text" id="whoCompletedProfile" name="whoCompletedProfile" value="<%= userData.whoCompletedProfile || '' %>">
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="preferredAgeRange"><i class="fas fa-user"></i> Preferred Age Range</label>
                  <input type="text" id="preferredAgeRange" name="preferredAgeRange" value="<%= userData.preferredAgeRange || '' %>">
                </div>
                <div class="form-group">
                  <label for="preferredHeightRange"><i class="fas fa-user"></i> Preferred Height Range</label>
                  <input type="text" id="preferredHeightRange" name="preferredHeightRange" value="<%= userData.preferredHeightRange || '' %>">
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="preferredCaste"><i class="fas fa-user"></i> Preferred Caste</label>
                  <input type="text" id="preferredCaste" name="preferredCaste" value="<%= userData.preferredCaste || '' %>">
                </div>
                <div class="form-group">
                  <label for="preferredEthnicity"><i class="fas fa-user"></i> Preferred Ethnicity</label>
                  <input type="text" id="preferredEthnicity" name="preferredEthnicity" value="<%= userData.preferredEthnicity || '' %>">
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="allowParnterToWork"><i class="fas fa-briefcase"></i> Allow Partner To Work</label>
                  <select id="allowParnterToWork" name="allowParnterToWork" class="select-styled">
                    <option value="">Select</option>
                    <option value="true" <%= userData.allowParnterToWork === true ? 'selected' : '' %>>Yes</option>
                    <option value="false" <%= userData.allowParnterToWork === false ? 'selected' : '' %>>No</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="allowPartnerToStudy"><i class="fas fa-book"></i> Allow Partner To Study</label>
                  <select id="allowPartnerToStudy" name="allowPartnerToStudy" class="select-styled">
                    <option value="">Select</option>
                    <option value="true" <%= userData.allowPartnerToStudy === true ? 'selected' : '' %>>Yes</option>
                    <option value="false" <%= userData.allowPartnerToStudy === false ? 'selected' : '' %>>No</option>
                  </select>
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="acceptSomeoneInOtherCountry"><i class="fas fa-globe"></i> Accept Someone In Other Country</label>
                  <select id="acceptSomeoneInOtherCountry" name="acceptSomeoneInOtherCountry" class="select-styled">
                    <option value="">Select</option>
                    <option value="true" <%= userData.acceptSomeoneInOtherCountry === true ? 'selected' : '' %>>Yes</option>
                    <option value="false" <%= userData.acceptSomeoneInOtherCountry === false ? 'selected' : '' %>>No</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="willingToRelocate"><i class="fas fa-plane"></i> Willing To Relocate</label>
                  <select id="willingToRelocate" name="willingToRelocate" class="select-styled">
                    <option value="">Select</option>
                    <option value="true" <%= userData.willingToRelocate === true ? 'selected' : '' %>>Yes</option>
                    <option value="false" <%= userData.willingToRelocate === false ? 'selected' : '' %>>No</option>
                  </select>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="QualitiesThatYouCanBringToYourMarriage"><i class="fas fa-star"></i> Qualities That You Can Bring To Your Marriage</label>
                  <input type="text" id="QualitiesThatYouCanBringToYourMarriage" name="QualitiesThatYouCanBringToYourMarriage" value="<%= userData.QualitiesThatYouCanBringToYourMarriage && userData.QualitiesThatYouCanBringToYourMarriage.length ? userData.QualitiesThatYouCanBringToYourMarriage.join(', ') : '' %>" placeholder="Comma separated">
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="hobbies"><i class="fas fa-heart"></i> Hobbies</label>
                  <input type="text" id="hobbies" name="hobbies" value="<%= userData.hobbies && userData.hobbies.length ? userData.hobbies.join(', ') : '' %>" placeholder="Comma separated">
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="qualitiesYouNeedInYourPartner"><i class="fas fa-star"></i> Qualities You Need In Your Partner</label>
                  <input type="text" id="qualitiesYouNeedInYourPartner" name="qualitiesYouNeedInYourPartner" value="<%= userData.qualitiesYouNeedInYourPartner && userData.qualitiesYouNeedInYourPartner.length ? userData.qualitiesYouNeedInYourPartner.join(', ') : '' %>" placeholder="Comma separated">
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="lookingForASpouseThatIs"><i class="fas fa-heart"></i> Looking For A Spouse That Is</label>
                  <input type="text" id="lookingForASpouseThatIs" name="lookingForASpouseThatIs" value="<%= userData.lookingForASpouseThatIs || '' %>">
                </div>
              </div>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Account - damourmuslim</title>
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="/css/edit-account.css" />
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body>
  <header class="header">
    <div class="container">
      <div class="logo">
        <a href="/">
          <img src="https://res.cloudinary.com/dhuc2plh0/image/upload/v1752814079/logo_golden_final_company_u9acij.svg" alt="Company Logo" />
        </a>
      </div>
      <div class="auth-buttons">
        <% if (user) { %>
        <a href="/logout" class="btn btn-signup">Logout</a>
        <% } else { %>
        <a href="/register" class="btn btn-signup">Sign Up</a>
        <a href="/login" class="btn btn-login">Login</a>
        <% } %>
      </div>
      <div class="mobile-menu-toggle">
        <i class="fas fa-bars"></i>
      </div>
    </div>
  </header>

  <main>
    <div class="container">
      <div class="edit-account-container">
        <div class="page-header">
          <h1>Edit Your Account</h1>
          <p>Update your personal information</p>
        </div>

        <% if (typeof msg !== "undefined" && msg) { %>
        <div class="info-message">
          <i class="fas fa-info-circle info-icon"></i>
          <%= msg %>
        </div>
        <% } %>

        <div class="account-card">
          <div class="account-nav">
            <a href="/account" class="nav-item">
              <i class="fas fa-user"></i> Profile
            </a>
            <a href="/account/edit" class="nav-item active">
              <i class="fas fa-edit"></i> Edit Profile
            </a>
          </div>

          <div class="account-content">
            <form action="/account/edit" method="POST" enctype="multipart/form-data" class="edit-form">
              <div class="form-row">
                <!-- PROFILE PICTURE -->
                <h2 class="add-user-section-heading" style="text-align:center;">Profile Picture</h2>
                <div class="form-group" style="align-items:center;">
                  <label for="profilePic" style="text-align:center;">
                    <i class="fas fa-image"></i> Profile Image
                  </label>
                  <div class="custom-file-input" style="margin: 0 auto;">
                    <div class="file-input-button">
                      <i class="fas fa-upload"></i> Choose Image
                    </div>
                    <input type="file" id="profilePic" name="profilePic" accept="image/*" style="display:none;" />
                    <span class="file-name">No file chosen</span>
                    <button type="button" id="removeImageBtn" style="display:none; margin-left:10px;">Remove</button>
                  </div>
                  <div id="imagePreview" style="margin-top:10px;">
                    <% if (userData.profilePic && userData.profilePic.url) { %>
                    <img src="<%= userData.profilePic.url %>" alt="Current Profile" style="max-width:120px; border-radius:8px;" id="currentProfileImg">
                    <% } %>
                  </div>
                </div>
              </div>

              <!-- BASIC INFO -->
              <h2 class="add-user-section-heading">Basic Info</h2>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="gender"><i class="fas fa-venus-mars"></i> Gender <span style="color:red">*</span></label>
                  <select id="gender" name="gender" class="select-styled" required>
                    <option value="">Gender</option>
                    <option value="N/A" <%= userData.gender === 'N/A' ? 'selected' : '' %>>N/A</option>
                    <option value="male" <%= userData.gender === 'male' ? 'selected' : '' %>>Male</option>
                    <option value="female" <%= userData.gender === 'female' ? 'selected' : '' %>>Female</option>
                    <option value="rather not say" <%= userData.gender === 'rather not say' ? 'selected' : '' %>>Rather not say</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="name"><i class="fas fa-user"></i> Name <span style="color:red">*</span></label>
                  <input type="text" id="name" name="name" value="<%= userData.name || '' %>" required />
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="age"><i class="fas fa-user"></i> Age <span style="color:red">*</span></label>
                  <input type="number" id="age" name="age" min="15" max="75" value="<%= userData.age || '' %>" required />
                </div>
                <div class="form-group">
                  <label for="contact"><i class="fas fa-phone"></i> Contact</label>
                  <input type="number" id="contact" name="contact" value="<%= userData.contact || '' %>" required />
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="work"><i class="fas fa-briefcase"></i> Work (Job/Profession)</label>
                  <input type="text" id="work" name="work" value="<%= userData.work || '' %>" />
                </div>
                <div class="form-group">
                  <label for="nationality"><i class="fas fa-flag"></i> Nationality</label>
                  <input type="text" id="nationality" name="nationality" value="<%= userData.nationality || '' %>" />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="maritalStatus"><i class="fas fa-ring"></i> Marital Status</label>
                  <select id="maritalStatus" name="maritalStatus" class="select-styled" required>
                    <option value="">Marital Status</option>
                    <option value="N/A" <%= userData.maritalStatus === 'N/A' ? 'selected' : '' %>>N/A</option>
                    <option value="false" <%= userData.maritalStatus === false ? 'selected' : '' %>>Unmarried</option>
                    <option value="true" <%= userData.maritalStatus === true ? 'selected' : '' %>>Married</option>
                  </select>
                </div>
              </div>

              <!-- ADDRESS INFORMATION -->
              <h2 class="add-user-section-heading">Address Information</h2>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="country"><i class="fas fa-globe"></i> Country <span style="color:red">*</span></label>
                  <select id="country" name="country" class="select-styled" required data-selected="<%= userData.country || '' %>">
                    <option value="">Country</option>
                    <option value="N/A" <%= userData.country === 'N/A' ? 'selected' : '' %>>N/A</option>
                    <option value="Pakistan" <%= userData.country === 'Pakistan' ? 'selected' : '' %>>Pakistan</option>
                    <option value="India" <%= userData.country === 'India' ? 'selected' : '' %>>India</option>
                    <option value="UK" <%= userData.country === 'UK' ? 'selected' : '' %>>United Kingdom</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="state"><i class="fas fa-map"></i> State/Province <span style="color:red">*</span></label>
                  <select id="state" name="state" class="select-styled" required data-selected="<%= userData.state || '' %>">
                    <option value="">State</option>
                  </select>
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="city"><i class="fas fa-map-marker-alt"></i> City <span style="color:red">*</span></label>
                  <select id="city" name="city" class="select-styled" required data-selected="<%= userData.city || '' %>">
                    <option value="">City</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="adress"><i class="fas fa-home"></i> Address <span style="color:red">*</span></label>
                  <input type="text" id="adress" name="adress" value="<%= userData.adress || '' %>" required />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="birthPlace"><i class="fas fa-map-marker-alt"></i> Birth Place</label>
                  <input type="text" id="birthPlace" name="birthPlace" value="<%= userData.birthPlace || '' %>">
                </div>
              </div>

              <!-- APPEARANCE -->
              <h2 class="add-user-section-heading">Appearance</h2>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="eyeColor"><i class="fas fa-eye"></i> Eye Color</label>
                  <select id="eyeColor" name="eyeColor" class="select-styled" required>
                    <option value="">Eye Color</option>
                    <option value="N/A" <%= userData.eyeColor === 'N/A' ? 'selected' : '' %>>N/A</option>
                    <option value="black" <%= userData.eyeColor === 'black' ? 'selected' : '' %>>Black</option>
                    <option value="brown" <%= userData.eyeColor === 'brown' ? 'selected' : '' %>>Brown</option>
                    <option value="grey" <%= userData.eyeColor === 'grey' ? 'selected' : '' %>>Grey</option>
                    <option value="other" <%= userData.eyeColor === 'other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="hairColor"><i class="fas fa-paint-brush"></i> Hair Color</label>
                  <select id="hairColor" name="hairColor" class="select-styled" required>
                    <option value="">Hair Color</option>
                    <option value="N/A" <%= userData.hairColor === 'N/A' ? 'selected' : '' %>>N/A</option>
                    <option value="black" <%= userData.hairColor === 'black' ? 'selected' : '' %>>Black</option>
                    <option value="brown" <%= userData.hairColor === 'brown' ? 'selected' : '' %>>Brown</option>
                    <option value="blonde" <%= userData.hairColor === 'blonde' ? 'selected' : '' %>>Blonde</option>
                  </select>
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="complexion"><i class="fas fa-user"></i> Complexion</label>
                  <select id="complexion" name="complexion" class="select-styled" required>
                    <option value="">Complexion</option>
                    <option value="N/A" <%= userData.complexion === 'N/A' ? 'selected' : '' %>>N/A</option>
                    <option value="fair" <%= userData.complexion === 'fair' ? 'selected' : '' %>>Fair</option>
                    <option value="wheatish" <%= userData.complexion === 'wheatish' ? 'selected' : '' %>>Wheatish</option>
                    <option value="dark" <%= userData.complexion === 'dark' ? 'selected' : '' %>>Dark</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="build"><i class="fas fa-dumbbell"></i> Build</label>
                  <select id="build" name="build" class="select-styled" required>
                    <option value="">Build</option>
                    <option value="N/A" <%= userData.build === 'N/A' ? 'selected' : '' %>>N/A</option>
                    <option value="slim" <%= userData.build === 'slim' ? 'selected' : '' %>>Slim</option>
                    <option value="average" <%= userData.build === 'average' ? 'selected' : '' %>>Average</option>
                    <option value="athletic" <%= userData.build === 'athletic' ? 'selected' : '' %>>Athletic</option>
                    <option value="heavy" <%= userData.build === 'heavy' ? 'selected' : '' %>>Heavy</option>
                  </select>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="height"><i class="fas fa-ruler-vertical"></i> Height</label>
                  <select name="height" id="height" required>
                    <option value="">Select Height</option>
                    <option value="134" <%= userData.height == 134 ? 'selected' : '' %>>4ft 5in - 134cm</option>
                    <option value="137" <%= userData.height == 137 ? 'selected' : '' %>>4ft 6in - 137cm</option>
                    <option value="139" <%= userData.height == 139 ? 'selected' : '' %>>4ft 7in - 139cm</option>
                    <option value="142" <%= userData.height == 142 ? 'selected' : '' %>>4ft 8in - 142cm</option>
                    <option value="144" <%= userData.height == 144 ? 'selected' : '' %>>4ft 9in - 144cm</option>
                    <option value="147" <%= userData.height == 147 ? 'selected' : '' %>>4ft 10in - 147cm</option>
                    <option value="149" <%= userData.height == 149 ? 'selected' : '' %>>4ft 11in - 149cm</option>
                    <option value="152" <%= userData.height == 152 ? 'selected' : '' %>>5ft - 152cm</option>
                    <option value="154" <%= userData.height == 154 ? 'selected' : '' %>>5ft 1in - 154cm</option>
                    <option value="157" <%= userData.height == 157 ? 'selected' : '' %>>5ft 2in - 157cm</option>
                    <option value="160" <%= userData.height == 160 ? 'selected' : '' %>>5ft 3in - 160cm</option>
                    <option value="162" <%= userData.height == 162 ? 'selected' : '' %>>5ft 4in - 162cm</option>
                    <option value="165" <%= userData.height == 165 ? 'selected' : '' %>>5ft 5in - 165cm</option>
                    <option value="167" <%= userData.height == 167 ? 'selected' : '' %>>5ft 6in - 167cm</option>
                    <option value="170" <%= userData.height == 170 ? 'selected' : '' %>>5ft 7in - 170cm</option>
                    <option value="172" <%= userData.height == 172 ? 'selected' : '' %>>5ft 8in - 172cm</option>
                    <option value="175" <%= userData.height == 175 ? 'selected' : '' %>>5ft 9in - 175cm</option>
                    <option value="177" <%= userData.height == 177 ? 'selected' : '' %>>5ft 10in - 177cm</option>
                    <option value="180" <%= userData.height == 180 ? 'selected' : '' %>>5ft 11in - 180cm</option>
                    <option value="182" <%= userData.height == 182 ? 'selected' : '' %>>6ft - 182cm</option>
                    <option value="185" <%= userData.height == 185 ? 'selected' : '' %>>6ft 1in - 185cm</option>
                    <option value="187" <%= userData.height == 187 ? 'selected' : '' %>>6ft 2in - 187cm</option>
                    <option value="190" <%= userData.height == 190 ? 'selected' : '' %>>6ft 3in - 190cm</option>
                    <option value="193" <%= userData.height == 193 ? 'selected' : '' %>>6ft 4in - 193cm</option>
                    <option value="195" <%= userData.height == 195 ? 'selected' : '' %>>6ft 5in - 195cm</option>
                    <option value="198" <%= userData.height == 198 ? 'selected' : '' %>>6ft 6in - 198cm</option>
                    <option value="200" <%= userData.height == 200 ? 'selected' : '' %>>6ft 7in - 200cm</option>
                    <option value="203" <%= userData.height == 203 ? 'selected' : '' %>>6ft 8in - 203cm</option>
                    <option value="205" <%= userData.height == 205 ? 'selected' : '' %>>6ft 9in - 205cm</option>
                    <option value="208" <%= userData.height == 208 ? 'selected' : '' %>>6ft 10in - 208cm</option>
                    <option value="210" <%= userData.height == 210 ? 'selected' : '' %>>6ft 11in - 210cm</option>
                    <option value="213" <%= userData.height == 213 ? 'selected' : '' %>>7ft - 213cm</option>
                  </select>
                </div>
              </div>
              <h2 class="add-user-section-heading">Religion & Caste</h2>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="religion">Religion</label>
                  <select name="religion" id="religion" required>
                    <option value="">Religion</option>
                    <option value="N/A" <%= userData.religion === 'N/A' ? 'selected' : '' %>>N/A</option>
                    <option value="islam" <%= userData.religion === 'islam' ? 'selected' : '' %>>Islam</option>
                    <option value="hinduism" <%= userData.religion === 'hinduism' ? 'selected' : '' %>>Hinduism</option>
                    <option value="christianity" <%= userData.religion === 'christianity' ? 'selected' : '' %>>Christianity</option>
                    <option value="sikhism" <%= userData.religion === 'sikhism' ? 'selected' : '' %>>Sikhism</option>
                    <option value="buddhism" <%= userData.religion === 'buddhism' ? 'selected' : '' %>>Buddhism</option>
                    <option value="judaism" <%= userData.religion === 'judaism' ? 'selected' : '' %>>Judaism</option>
                    <option value="other" <%= userData.religion === 'other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="caste">Caste</label>
                  <select name="caste" id="caste" required>
                    <option value="">Caste</option>
                    <option value="N/A" <%= userData.caste === 'N/A' ? 'selected' : '' %>>N/A</option>
                    <option value="syed" <%= userData.caste === 'syed' ? 'selected' : '' %>>Syed</option>
                    <option value="sheikh" <%= userData.caste === 'sheikh' ? 'selected' : '' %>>Sheikh</option>
                    <option value="pathan" <%= userData.caste === 'pathan' ? 'selected' : '' %>>Pathan</option>
                    <option value="rajput" <%= userData.caste === 'rajput' ? 'selected' : '' %>>Rajput</option>
                    <option value="mughal" <%= userData.caste === 'mughal' ? 'selected' : '' %>>Mughal</option>
                    <option value="gujjar" <%= userData.caste === 'gujjar' ? 'selected' : '' %>>Gujjar</option>
                    <option value="jutt" <%= userData.caste === 'jutt' ? 'selected' : '' %>>Jutt</option>
                    <option value="ansari" <%= userData.caste === 'ansari' ? 'selected' : '' %>>Ansari</option>
                    <option value="awwan" <%= userData.caste === 'awwan' ? 'selected' : '' %>>Awwan</option>
                    <option value="qureshi" <%= userData.caste === 'qureshi' ? 'selected' : '' %>>Qureshi</option>
                    <option value="malik" <%= userData.caste === 'malik' ? 'selected' : '' %>>Malik</option>
                    <option value="choudhary" <%= userData.caste === 'choudhary' ? 'selected' : '' %>>Choudhary</option>
                    <option value="other" <%= userData.caste === 'other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="ethnicity">Ethnicity</label>
                  <select name="ethnicity" id="ethnicity" required>
                    <option value="">Ethnicity</option>
                    <option value="N/A" <%= userData.ethnicity === 'N/A' ? 'selected' : '' %>>N/A</option>
                    <option value="asian" <%= userData.ethnicity === 'asian' ? 'selected' : '' %>>Asian</option>
                    <option value="african" <%= userData.ethnicity === 'african' ? 'selected' : '' %>>African</option>
                    <option value="caucasian" <%= userData.ethnicity === 'caucasian' ? 'selected' : '' %>>Caucasian</option>
                    <option value="latino" <%= userData.ethnicity === 'latino' ? 'selected' : '' %>>Latino</option>
                    <option value="arab" <%= userData.ethnicity === 'arab' ? 'selected' : '' %>>Arab</option>
                    <option value="other" <%= userData.ethnicity === 'other' ? 'selected' : '' %>>Other</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="islamicSect">Islamic Sect/Fiqh</label>
                  <input type="text" name="islamicSect" id="islamicSect" value="<%= userData.islamicSect || '' %>" required />
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="bornMuslim">Born Muslim</label>
                  <select name="bornMuslim" id="bornMuslim" required>
                    <option value="">Born Muslim</option>
                    <option value="N/A" <%= userData.bornMuslim === 'N/A' ? 'selected' : '' %>>N/A</option>
                    <option value="true" <%= userData.bornMuslim === true ? 'selected' : '' %>>Yes</option>
                    <option value="false" <%= userData.bornMuslim === false ? 'selected' : '' %>>No</option>
                  </select>
                </div>
              </div>

              <!-- EDUCATION -->
              <h2 class="add-user-section-heading">Education</h2>
              <div class="form-row">
                <div id="education-section">
                  <label style="display: block; margin-top: 0">Any Education?</label>
                  <select id="has-education" name="hasEducation" style="width: 100%; margin-bottom: 10px">
                    <option value="">Select</option>
                    <option value="N/A" <%= userData.hasEducation === 'N/A' ? 'selected' : '' %>>N/A</option>
                    <option value="no" <%= userData.hasEducation === 'no' ? 'selected' : '' %>>No</option>
                    <option value="yes" <%= userData.hasEducation === 'yes' ? 'selected' : '' %>>Yes</option>
                  </select>
                  <div id="education-inputs" style="display: none">
                    <div id="education-list"></div>
                    <div class="education-row" style="display: flex; gap: 8px; margin-bottom: 8px">
                      <input type="text" id="education-title" placeholder="Degree/Title (e.g. BSc)" />
                      <input type="text" id="education-institute" placeholder="Institute (e.g. Punjab University)" />
                      <input type="number" id="education-year" placeholder="Year (e.g. 2022)" />
                      <button type="button" id="add-education-btn" style="flex: 0 0 auto">Add</button>
                    </div>
                  </div>
                  <input type="hidden" name="education" id="education-json" value='<%= JSON.stringify(userData.education || []) %>' />
                </div>
              </div>

              <!-- ABOUT -->
              <h2 class="add-user-section-heading">About</h2>
              <div class="form-row">
                <div class="form-group">
                  <label for="aboutMe">About Me</label>
                  <textarea name="aboutMe" id="aboutMe" rows="3"><%= userData.aboutMe || '' %></textarea>
                </div>
                <div class="form-group">
                  <label for="describeNature">Describe Nature</label>
                  <textarea name="describeNature" id="describeNature" rows="3"><%= userData.describeNature || '' %></textarea>
                </div>
                <div class="form-group">
                  <label for="hobbies">Hobbies</label>
                  <input type="text" name="hobbies" id="hobbies" value="<%= (userData.hobbies || []).join(', ') %>" placeholder="Hobbies (comma separated)" />
                </div>
                <div class="form-group">
                  <label for="languagesSpoken">Languages Spoken</label>
                  <input type="text" name="languagesSpoken" id="languagesSpoken" value="<%= (userData.languagesSpoken || []).join(', ') %>" placeholder="Languages Spoken (comma separated)" required />
                </div>
                <div class="form-group">
                  <label for="anySpecialInformationPeopleShouldKnow">Any Special Information People Should Know</label>
                  <textarea name="anySpecialInformationPeopleShouldKnow" id="anySpecialInformationPeopleShouldKnow" rows="3"><%= userData.anySpecialInformationPeopleShouldKnow || '' %></textarea>
                </div>
              </div>

              <!-- FAMILY DETAILS -->
              <h2 class="add-user-section-heading">Family Details</h2>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="fatherName">Father's Name</label>
                  <input type="text" name="fatherName" id="fatherName" value="<%= userData.fatherName || '' %>" />
                </div>
                <div class="form-group">
                  <label for="fatherProfession">Father's Profession</label>
                  <input type="text" name="fatherProfession" id="fatherProfession" value="<%= userData.fatherProfession || '' %>" />
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="motherName">Mother's Name</label>
                  <input type="text" name="motherName" id="motherName" value="<%= userData.motherName || '' %>" />
                </div>
                <div class="form-group">
                  <label for="siblings">Number of Siblings</label>
                  <input type="number" name="siblings" id="siblings" min="0" value="<%= userData.siblings || '' %>" />
                </div>
              </div>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="waliMyContactDetails">Wali's Contact Details</label>
                  <input type="text" name="waliMyContactDetails" id="waliMyContactDetails" value="<%= userData.waliMyContactDetails || '' %>" />
                </div>
                <div class="form-group">
                  <label for="whoCompletedProfile">Who Completed Profile</label>
                  <input type="text" name="whoCompletedProfile" id="whoCompletedProfile" value="<%= userData.whoCompletedProfile || '' %>" />
                </div>
              </div>
              <!-- DISABILITY & HEALTH -->
              <h2 class="add-user-section-heading">Disability & Health</h2>
              <div class="form-row two-columns">
                <div class="form-group">
                  <label for="disability">Disability</label>
                  <select name="disability" id="disability" required>
                    <option value="no" <%= userData.disability === 'no' ? 'selected' : '' %>>No</option>
                    <option value="N/A" <%= userData.disability === 'N/A' ? 'selected' : '' %>>N/A</option>

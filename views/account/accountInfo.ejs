<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Account Info - Fashion Store</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/account.css" />
    <!-- Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body>
    <header class="header">
      <div class="container">
        <div class="logo">
          <a href="/">
            <img src="/imgs/LOGO.png" alt="Company Logo" />
          </a>
        </div>
        <div class="auth-buttons">
          <% if (user) { %>
          <a href="/logout" class="btn btn-signup">Logout</a>
          <% } else { %>
          <a href="/register" class="btn btn-signup">Sign Up</a>
          <a href="/login" class="btn btn-login">Login</a>
          <% } %>
        </div>
        <div class="mobile-menu-toggle">
          <i class="fas fa-bars"></i>
        </div>
      </div>
    </header>

    <main>
      <div class="container">
        <div class="account-container">
          <div class="page-header">
            <h1>Your Account</h1>
            <p>View and manage your personal information</p>
          </div>

          <div class="account-card">
            <div class="account-nav">
              <a href="/account/info" class="nav-item active">
                <i class="fas fa-user"></i> Account Info
              </a>
              <a href="/account/yourRequests" class="nav-item">
                <i class="fas fa-paper-plane"></i> Your Requests
              </a>
              <a href="/account/pendingRequests" class="nav-item">
                <i class="fas fa-clock"></i> Pending Requests
              </a>
              <a href="/account/acceptedRequests" class="nav-item">
                <i class="fas fa-check-circle"></i> Accepted Requests
              </a>
              <a href="/account/edit" class="nav-item">
                <i class="fas fa-edit"></i> Edit Profile
              </a>
            </div>

            <div class="account-content">
              <div class="account-info-container">
                <div class="profile-header">
                  <div class="profile-avatar">
                    <% if (accountInfo.profilePic && accountInfo.profilePic.url)
                    { %>
                    <img
                      src="<%= accountInfo.profilePic.url %>"
                      alt="<%= accountInfo.name %>'s profile picture"
                      class="profile-image"
                    />
                    <% } else { %> <% if (accountInfo.gender &&
                    accountInfo.gender.toLowerCase() === 'female') { %>
                    <i class="fas fa-female"></i>
                    <% } else { %>
                    <i class="fas fa-male"></i>
                    <% } %> <% } %>
                  </div>
                  <div class="profile-title">
                    <h2><%= accountInfo.name %></h2>
                    <span class="username">@<%= accountInfo.username %></span>
                  </div>
                </div>

                <div class="info-section">
                  <h3>Personal Information</h3>

                  <div class="info-grid">
                    <div class="info-item">
                      <div class="info-label">
                        <i class="fas fa-venus-mars"></i> Gender
                      </div>
                      <div class="info-value">
                        <%= accountInfo.gender || '-' %>
                      </div>
                    </div>
                    <div class="info-item">
                      <div class="info-label">
                        <i class="fas fa-venus-mars"></i> age
                      </div>
                      <div class="info-value">
                        <%= accountInfo.age || '-' %>
                      </div>
                    </div>
                    <div class="info-item">
                      <div class="info-label">
                        <i class="fas fa-venus-mars"></i> caste
                      </div>
                      <div class="info-value">
                        <%= accountInfo.caste || '-' %>
                      </div>
                    </div>

                    <div class="info-item">
                      <div class="info-label">
                        <i class="fas fa-pray"></i> Religion
                      </div>
                      <div class="info-value">
                        <%= accountInfo.religion || '-' %>
                      </div>
                    </div>

                    <div class="info-item">
                      <div class="info-label">
                        <i class="fas fa-map-marker-alt"></i> City
                      </div>
                      <div class="info-value">
                        <%= accountInfo.city || '-' %>
                      </div>
                    </div>

                    <div class="info-item">
                      <div class="info-label">
                        <i class="fas fa-home"></i> Address
                      </div>
                      <div class="info-value">
                        <%= accountInfo.adress || '-' %>
                      </div>
                    </div>

                    <div class="info-item">
                      <div class="info-label">
                        <i class="fas fa-phone"></i> Contact
                      </div>
                      <div class="info-value">
                        <%= accountInfo.contact || '-' %>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="account-actions">
                  <a href="/account/edit" class="btn btn-edit">
                    <i class="fas fa-edit"></i> Edit Profile
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h3>About Us</h3>
            <p>
              We make knowing eachother secure that ever and find the perfect
              match for you
            </p>
          </div>
          <div class="footer-section">
            <h3>Contact</h3>
            <p>Email: info@example.com</p>
            <p>Phone: (123) 456-7890</p>
          </div>
          <div class="footer-section">
            <h3>Follow Us</h3>
            <div class="social-icons">
              <a href="#"><i class="fab fa-facebook"></i></a>
              <a href="#"><i class="fab fa-instagram"></i></a>
              <a href="#"><i class="fab fa-twitter"></i></a>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2025 Fashion Store. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Mobile menu toggle
        const menuToggle = document.querySelector(".mobile-menu-toggle");
        const authButtons = document.querySelector(".auth-buttons");

        if (menuToggle && authButtons) {
          menuToggle.addEventListener("click", function () {
            authButtons.classList.toggle("active");
          });
        }

        // Close menu when clicking outside
        document.addEventListener("click", function (event) {
          if (
            !event.target.closest(".mobile-menu-toggle") &&
            !event.target.closest(".auth-buttons") &&
            authButtons &&
            authButtons.classList.contains("active")
          ) {
            authButtons.classList.remove("active");
          }
        });
      });
    </script>
  </body>
</html>

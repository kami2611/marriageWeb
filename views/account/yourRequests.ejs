<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Requests</title>
    <style>
      .hidden {
        display: none;
      }
    </style>
  </head>
  <body>
    <h1>Requests you sent</h1>

    <label for="statusFilter">Filter by status:</label>
    <select id="statusFilter" onchange="filterRequests()">
      <option value="all">All</option>
      <option value="pending">Pending</option>
      <option value="accepted">Accepted</option>
    </select>

    <% if (requestsSentByYou.length === 0) { %>
    <p>You haven't sent any requests yet.</p>
    <% } else { %>
    <ul id="requestList">
      <% requestsSentByYou.forEach(req => { %>
      <li class="request" data-status="<%= req.status %>">
        <p><strong>Username:</strong> <%= req.to.username %></p>
        <p><strong>City:</strong> <%= req.to.city %></p>
        <p><strong>Status:</strong> <%= req.status %></p>
        <button
          onclick="handleRequestCancel(this)"
          data-request_id="<%= req._id %>"
        >
          cancel request
        </button>
        <% if (req.status === 'accepted') { %>
        <p><strong>Name:</strong> <%= req.to.name %></p>
        <p><strong>Address:</strong> <%= req.to.adress %></p>
        <p><strong>Contact:</strong> <%= req.to.contact %></p>
        <p><strong>Gender:</strong> <%= req.to.gender %></p>
        <p><strong>Religion:</strong> <%= req.to.religion %></p>
        <% } %>
        <hr />
      </li>
      <% }) %>
    </ul>
    <% } %>

    <script>
      function filterRequests() {
        const selected = document.getElementById("statusFilter").value;
        const requests = document.querySelectorAll(".request");

        requests.forEach((req) => {
          const status = req.dataset.status;
          if (selected === "all" || status === selected) {
            req.style.display = "block";
          } else {
            req.style.display = "none";
          }
        });
      }
      async function handleRequestCancel(button) {
        const requestId = button.dataset.request_id;
        const res = await fetch(`/requests/${requestId}/cancel`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
        });
        if (res.ok) {
          button.innerText = "canceled";
          button.disabled = true;
        }
      }
    </script>
  </body>
</html>

          username: 'khadija_ali',
          location: 'Istanbul, Turkey',
          status: 'pending',
          sentDate: '2024-01-19',
          profileImage: 'https://readdy.ai/api/search-image?query=Beautiful%20Muslim%20woman%20professional%20modest%20dress&width=100&height=100&seq=profile006'
        }
      ];

      let currentRequests = [...sampleRequests];
      let filteredRequests = [...sampleRequests];

      const requestsContainer = document.getElementById('requestsContainer');
      const statusFilter = document.getElementById('statusFilter');
      const emptyState = document.getElementById('emptyState');
      const loadingState = document.getElementById('loadingState');

      // Initialize the page
      function init() {
        setTimeout(() => {
          loadingState.classList.add('hidden');
          renderRequests();
          updateStats();
        }, 1000); // Simulate loading time
      }

      // Render request cards
      function renderRequests() {
        requestsContainer.innerHTML = '';

        if (filteredRequests.length === 0) {
          emptyState.classList.remove('hidden');
          return;
        }

        emptyState.classList.add('hidden');

        filteredRequests.forEach(request => {
          const requestCard = createRequestCard(request);
          requestsContainer.appendChild(requestCard);
        });
      }

      // Create individual request card
      function createRequestCard(request) {
        const card = document.createElement('div');
        card.className = 'request-card bg-white rounded-2xl p-6 material-shadow hover:material-shadow-hover';
        card.setAttribute('data-request-id', request.id);

        const statusClass = `status-${request.status}`;
        const statusIcon = getStatusIcon(request.status);
        const statusText = request.status.charAt(0).toUpperCase() + request.status.slice(1);

        card.innerHTML = `
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
              <!-- Profile Image -->
              <div class="w-16 h-16 rounded-full overflow-hidden bg-gray-100 flex-shrink-0">
                <img src="${request.profileImage}" alt="${request.username}" class="w-full h-full object-cover" onerror="this.src='data:image/svg+xml;base64,'">
              </div>

              <!-- User Info -->
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <h3 class="text-lg font-semibold text-gray-900 font-['Playfair_Display']">@${request.username}</h3>
                  <span class="px-3 py-1 rounded-full text-xs font-medium border ${statusClass}">
                    <i class="${statusIcon} mr-1"></i>${statusText}
                  </span>
                </div>
                <div class="flex items-center gap-4 text-sm text-gray-600">
                  <div class="flex items-center gap-1">
                    <i class="ri-map-pin-line text-gray-400"></i>
                    <span>${request.location}</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <i class="ri-calendar-line text-gray-400"></i>
                    <span>Sent ${formatDate(request.sentDate)}</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Actions -->
            <div class="flex items-center gap-3">
              ${request.status === 'accepted' ? `
                <button class="px-4 py-2 bg-green-500 text-white hover:bg-green-600 transition-all duration-300 !rounded-button text-sm ripple">
                  <i class="ri-message-line mr-1"></i>Message
                </button>
              ` : ''}
              
              ${request.status === 'pending' ? `
                <button class="cancel-request px-4 py-2 border border-red-300 text-red-600 hover:bg-red-50 transition-all duration-300 !rounded-button text-sm ripple" data-request-id="${request.id}">
                  <i class="ri-close-line mr-1"></i>Cancel
                </button>
              ` : ''}

              <button class="view-profile px-4 py-2 border border-gray-300 text-gray-600 hover:bg-gray-50 transition-all duration-300 !rounded-button text-sm ripple" data-username="${request.username}">
                <i class="ri-user-line mr-1"></i>View Profile
              </button>
            </div>
          </div>
        `;

        return card;
      }

      // Get status icon
      function getStatusIcon(status) {
        switch (status) {
          case 'pending':
            return 'ri-time-line';
          case 'accepted':
            return 'ri-check-line';
          case 'rejected':
            return 'ri-close-line';
          default:
            return 'ri-question-line';
        }
      }

      // Format date
      function formatDate(dateString) {
        const date = new Date(dateString);
        const now = new Date();
        const diffTime = Math.abs(now - date);
        const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));

        if (diffDays === 0) return 'today';
        if (diffDays === 1) return 'yesterday';
        if (diffDays < 7) return `${diffDays} days ago`;

        return date.toLocaleDateString('en-US', {
          month: 'short',
          day: 'numeric',
          year: date.getFullYear() !== now.getFullYear() ? 'numeric' : undefined
        });
      }

      // Update statistics
      function updateStats() {
        const pending = currentRequests.filter(r => r.status === 'pending').length;
        const accepted = currentRequests.filter(r => r.status === 'accepted').length;
        const rejected = currentRequests.filter(r => r.status === 'rejected').length;

        document.getElementById('pendingCount').textContent = pending;
        document.getElementById('acceptedCount').textContent = accepted;
        document.getElementById('rejectedCount').textContent = rejected;
      }

      // Filter functionality
      statusFilter.addEventListener('change', function() {
        const selectedStatus = this.value;

        if (selectedStatus === 'all') {
          filteredRequests = [...currentRequests];
        } else {
          filteredRequests = currentRequests.filter(request => request.status === selectedStatus);
        }

        renderRequests();
      });

      // Handle cancel request
      document.addEventListener('click', function(e) {
        if (e.target.closest('.cancel-request')) {
          const requestId = parseInt(e.target.closest('.cancel-request').getAttribute('data-request-id'));
          cancelRequest(requestId);
        }

        if (e.target.closest('.view-profile')) {
          const username = e.target.closest('.view-profile').getAttribute('data-username');
          viewProfile(username);
        }
      });

      // Cancel request function
      function cancelRequest(requestId) {
        if (confirm('Are you sure you want to cancel this request?')) {
          // Remove from current requests
          currentRequests = currentRequests.filter(request => request.id !== requestId);

          // Update filtered requests based on current filter
          const selectedStatus = statusFilter.value;
          if (selectedStatus === 'all') {
            filteredRequests = [...currentRequests];
          } else {
            filteredRequests = currentRequests.filter(request => request.status === selectedStatus);
          }

          renderRequests();
          updateStats();
          showNotification('Request Cancelled', 'Your request has been cancelled successfully.', 'info');
        }
      }

      // View profile function
      function viewProfile(username) {
        console.log(`Viewing profile for: ${username}`);
        showNotification('Profile View', `Opening profile for @${username}`, 'info');
        // Here you would typically navigate to the user's profile page
      }

      // Notification function
      function showNotification(title, message, type = 'info') {
        const notification = document.createElement('div');
        const bgColor = type === 'success' ? 'bg-green-500' : type === 'info' ? 'bg-blue-500' : 'bg-red-500';
        const icon = type === 'success' ? 'ri-checkbox-circle-line' : type === 'info' ? 'ri-information-line' : 'ri-error-warning-line';

        notification.className = `fixed bottom-4 right-4 ${bgColor} text-white rounded-xl p-4 material-shadow-elevated flex items-center gap-3 transform translate-y-0 opacity-100 transition-all duration-300 z-50`;
        notification.innerHTML = `
          <i class="${icon} text-xl"></i>
          <div>
            <p class="font-medium">${title}</p>
            <p class="text-sm opacity-90">${message}</p>
          </div>
        `;

        document.body.appendChild(notification);

        setTimeout(() => {
          notification.style.transform = 'translateY(100%)';
          notification.style.opacity = '0';
          setTimeout(() => notification.remove(), 300);
        }, 3000);
      }

      // Initialize the application
      init();
    });
  </script>

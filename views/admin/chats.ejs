<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
  <link rel="manifest" href="/images/site.webmanifest">
  <meta name="theme-color" content="#E91E63">
  <title>Manage Chats - Admin Dashboard</title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Playfair+Display:wght@400;600;700&family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css">
  <style>
    :where([class^="ri-"])::before { content: "\f3c2"; }
    .material-shadow { box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
    .material-shadow-hover:hover { box-shadow: 0 4px 16px rgba(0,0,0,0.15); }
    
    .chat-item {
      transition: all 0.2s ease;
    }
    .chat-item:hover {
      background-color: #fdf2f8;
    }
  </style>
</head>

<body class="bg-gray-50 font-['Roboto']">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 py-3">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <a href="/admin/dashboard" class="text-gray-500 hover:text-primary transition-colors">
            <i class="ri-arrow-left-line text-xl"></i>
          </a>
          <div>
            <h1 class="text-xl font-bold text-gray-900 font-['Playfair_Display']">Manage Chats</h1>
            <p class="text-sm text-gray-500">View all conversations between users</p>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <span class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm font-medium">
            <%= conversations.length %> Conversations
          </span>
        </div>
      </div>
    </div>
  </header>

  <main class="py-6 min-h-screen">
    <div class="max-w-7xl mx-auto px-4">
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-white rounded-xl p-4 material-shadow">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
              <i class="ri-chat-3-line text-blue-600 text-lg"></i>
            </div>
            <div>
              <p class="text-2xl font-bold text-gray-900"><%= totalConversations %></p>
              <p class="text-sm text-gray-500">Total Conversations</p>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-xl p-4 material-shadow">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
              <i class="ri-message-2-line text-green-600 text-lg"></i>
            </div>
            <div>
              <p class="text-2xl font-bold text-gray-900"><%= totalMessages %></p>
              <p class="text-sm text-gray-500">Total Messages</p>
            </div>
          </div>
        </div>
        <div class="bg-white rounded-xl p-4 material-shadow">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
              <i class="ri-time-line text-purple-600 text-lg"></i>
            </div>
            <div>
              <p class="text-2xl font-bold text-gray-900"><%= activeToday %></p>
              <p class="text-sm text-gray-500">Active Today</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Search Box -->
      <div class="bg-white rounded-xl material-shadow p-4 mb-6">
        <div class="relative">
          <i class="ri-search-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
          <input 
            type="text" 
            id="searchInput" 
            placeholder="Search by username..."
            class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary"
          >
        </div>
      </div>

      <!-- Conversations List -->
      <div class="bg-white rounded-xl material-shadow overflow-hidden">
        <% if (conversations && conversations.length > 0) { %>
          <div class="divide-y divide-gray-100">
            <% conversations.forEach(function(conv) { %>
              <a href="/admin/chats/<%= conv._id %>" class="chat-item block p-4">
                <div class="flex items-center gap-4">
                  <!-- Participants Avatars -->
                  <div class="flex -space-x-3">
                    <% conv.participants.forEach(function(p, index) { %>
                      <div class="w-10 h-10 rounded-full overflow-hidden border-2 border-white <%= index === 1 ? 'relative z-0' : 'z-10' %>">
                        <% if (p.profilePic && p.profilePic.url) { %>
                          <img src="<%= p.profilePic.url %>" class="w-full h-full object-cover" alt="<%= p.username %>">
                        <% } else { %>
                          <div class="w-full h-full flex items-center justify-center <%= p.gender === 'female' ? 'bg-pink-100 text-pink-500' : 'bg-blue-100 text-blue-500' %>">
                            <i class="ri-user-3-line text-lg"></i>
                          </div>
                        <% } %>
                      </div>
                    <% }); %>
                  </div>

                  <!-- Conversation Info -->
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-1">
                      <span class="font-semibold text-gray-900">
                        <%= conv.participants[0] ? conv.participants[0].username : 'Unknown' %>
                      </span>
                      <i class="ri-arrow-left-right-line text-gray-400 text-sm"></i>
                      <span class="font-semibold text-gray-900">
                        <%= conv.participants[1] ? conv.participants[1].username : 'Unknown' %>
                      </span>
                    </div>
                    <% if (conv.lastMessage) { %>
                      <p class="text-sm text-gray-500 truncate">
                        <span class="text-gray-400"><%= conv.lastMessage.senderName %>:</span>
                        <%= conv.lastMessage.text.substring(0, 80) %><%= conv.lastMessage.text.length > 80 ? '...' : '' %>
                      </p>
                    <% } else { %>
                      <p class="text-sm text-gray-400 italic">No messages yet</p>
                    <% } %>
                  </div>

                  <!-- Meta Info -->
                  <div class="flex-shrink-0 text-right">
                    <p class="text-xs text-gray-400 mb-1">
                      <%= conv.lastMessageAt ? new Date(conv.lastMessageAt).toLocaleDateString('en-GB', { day: 'numeric', month: 'short' }) : '' %>
                    </p>
                    <span class="inline-flex items-center gap-1 bg-gray-100 text-gray-600 px-2 py-0.5 rounded-full text-xs">
                      <i class="ri-message-2-line"></i>
                      <%= conv.messageCount || 0 %>
                    </span>
                  </div>

                  <!-- Arrow -->
                  <div class="flex-shrink-0 text-gray-300">
                    <i class="ri-arrow-right-s-line text-xl"></i>
                  </div>
                </div>
              </a>
            <% }); %>
          </div>
        <% } else { %>
          <!-- Empty State -->
          <div class="py-16 text-center">
            <div class="mb-4">
              <i class="ri-chat-off-line text-6xl text-gray-200"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-700 mb-2">No conversations yet</h3>
            <p class="text-gray-500">Users haven't started any conversations.</p>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('searchInput');
      const chatItems = document.querySelectorAll('.chat-item');

      if (searchInput) {
        searchInput.addEventListener('input', function() {
          const searchTerm = this.value.toLowerCase();
          
          chatItems.forEach(function(item) {
            const text = item.textContent.toLowerCase();
            if (text.includes(searchTerm)) {
              item.style.display = 'block';
            } else {
              item.style.display = 'none';
            }
          });
        });
      }
    });
  </script>
</body>

</html>

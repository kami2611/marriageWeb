<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Deleted Accounts - D'amour Muslim Admin</title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css">
  <style>
    .material-shadow { box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); }
    .material-shadow-hover { box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15); }
    .gradient-bg { background: linear-gradient(135deg, #E91E63 0%, #673AB7 100%); }
    
    .account-row {
      transition: background-color 0.2s ease;
    }
    .account-row:hover {
      background-color: #f9fafb;
    }
  </style>
</head>

<body class="bg-gray-50 font-['Roboto']">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
    <div class="max-w-full mx-auto px-4 py-3">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <a href="/admin/dashboard" class="flex items-center gap-2 text-gray-600 hover:text-primary transition-colors">
            <i class="ri-arrow-left-line text-xl"></i>
            <span class="font-medium">Back to Dashboard</span>
          </a>
        </div>
        <h1 class="text-xl font-bold text-gray-900">Deleted Accounts Archive</h1>
        <div class="w-32"></div> <!-- Spacer for centering -->
      </div>
    </div>
  </header>

  <main class="py-6 min-h-screen">
    <div class="max-w-7xl mx-auto px-4">
      
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-xl p-6 material-shadow">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Total Deleted</p>
              <p class="text-3xl font-bold text-gray-900"><%= totalDeleted %></p>
            </div>
            <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
              <i class="ri-delete-bin-line text-2xl text-red-600"></i>
            </div>
          </div>
        </div>
      </div>

      <!-- Deleted Accounts Table -->
      <div class="bg-white rounded-xl material-shadow overflow-hidden">
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Deleted Accounts</h2>
          <p class="text-sm text-gray-600 mt-1">Complete archive of deleted user accounts</p>
        </div>

        <% if (deletedAccounts.length === 0) { %>
        <div class="p-12 text-center">
          <i class="ri-inbox-line text-5xl text-gray-400 mb-4"></i>
          <p class="text-gray-600">No deleted accounts found</p>
        </div>
        <% } else { %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User Info</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Deleted By</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Deleted At</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% deletedAccounts.forEach(account => { %>
              <tr class="account-row">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div>
                      <div class="text-sm font-medium text-gray-900"><%= account.name || account.username %></div>
                      <div class="text-sm text-gray-500">@<%= account.username %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= account.email || 'N/A' %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= account.deletedBy %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= new Date(account.deletedAt).toLocaleDateString() %></div>
                  <div class="text-xs text-gray-500"><%= new Date(account.deletedAt).toLocaleTimeString() %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if (account.reactivatedAt) { %>
                  <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                    <i class="ri-refresh-line"></i> Reactivated
                  </span>
                  <% } else if (account.canReactivate) { %>
                  <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                    <i class="ri-check-line"></i> Can Reactivate
                  </span>
                  <% } else { %>
                  <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">
                    <i class="ri-close-line"></i> Permanent
                  </span>
                  <% } %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <a href="/admin/deletedaccounts/<%= account._id %>" class="text-primary hover:text-pink-600 mr-3">
                    <i class="ri-eye-line"></i> View Details
                  </a>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } %>
      </div>
    </div>
  </main>
</body>
</html>
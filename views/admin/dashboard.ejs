  <script id="admin-interactions">
    document.addEventListener('DOMContentLoaded', function() {
      // Element declarations
      const newsletterBtn = document.getElementById('newsletterBtn');
      const blogsBtn = document.getElementById('blogsBtn');
      const searchInput = document.getElementById('searchInput');
      const userRows = document.querySelectorAll('.user-row');
      const profileCards = document.querySelectorAll('.profile-card');
      const statsFilterCards = document.querySelectorAll('.stats-filter-card');
      const deleteModal = document.getElementById('deleteModal');
      const deleteModalUserName = document.getElementById('deleteModalUserName');
      const deleteModalUserUsername = document.getElementById('deleteModalUserUsername');
      const deleteConfirmationInput = document.getElementById('deleteConfirmationInput');
      const deleteInputError = document.getElementById('deleteInputError');
      const cancelDeleteBtn = document.getElementById('cancelDeleteBtn');
      const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
      const deleteButtonText = document.getElementById('deleteButtonText');
      const deleteLoadingIcon = document.getElementById('deleteLoadingIcon');
      const gridViewBtn = document.getElementById('gridViewBtn');
      const tableViewBtn = document.getElementById('tableViewBtn');
      const tableView = document.getElementById('tableView');
      const gridView = document.getElementById('gridView');

      let currentDeleteUserId = null;
      let currentDeleteElement = null;
      // Mobile Menu functionality
      const mobileMenuBtn = document.getElementById('mobileMenuBtn');
      const mobileMenu = document.getElementById('mobileMenu');

      if (mobileMenuBtn && mobileMenu) {
        mobileMenuBtn.addEventListener('click', function() {
          mobileMenu.classList.toggle('hidden');
          const icon = this.querySelector('i');
          if (mobileMenu.classList.contains('hidden')) {
            icon.className = 'ri-menu-line text-xl';
          } else {
            icon.className = 'ri-close-line text-xl';
          }
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(e) {
          if (!mobileMenuBtn.contains(e.target) && !mobileMenu.contains(e.target)) {
            mobileMenu.classList.add('hidden');
            const icon = mobileMenuBtn.querySelector('i');
            icon.className = 'ri-menu-line text-xl';
          }
        });
      }
      const deletedAccountsBtn = document.getElementById('deletedAccountsBtn');
if (deletedAccountsBtn) {
  deletedAccountsBtn.addEventListener('click', function() {
    window.location.href = '/admin/deletedaccounts';
  });
}
      // Mobile navigation buttons
      const mobileRequestsBtn = document.getElementById('mobileRequestsBtn');
      const mobileNewsletterBtn = document.getElementById('mobileNewsletterBtn');
      const mobileBlogsBtn = document.getElementById('mobileBlogsBtn');
      const mobileAddUserBtn = document.getElementById('mobileAddUserBtn');

      if (mobileRequestsBtn) {
        mobileRequestsBtn.addEventListener('click', function() {
          window.location.href = '/admin/requests';
        });
      }

      const mobileChatsBtn = document.getElementById('mobileChatsBtn');
      if (mobileChatsBtn) {
        mobileChatsBtn.addEventListener('click', function() {
          window.location.href = '/admin/chats';
        });
      }

      if (mobileNewsletterBtn) {
        mobileNewsletterBtn.addEventListener('click', function() {
          window.location.href = '/admin/newsletter';
        });
      }

      if (mobileBlogsBtn) {
        mobileBlogsBtn.addEventListener('click', function() {
          window.location.href = '/admin/blogs';
        });
      }

      if (mobileAddUserBtn) {
        mobileAddUserBtn.addEventListener('click', function() {
          window.location.href = '/admin/addUser';
        });
      }

      // Mobile View Toggle functionality
      const mobileGridViewBtn = document.getElementById('mobileGridViewBtn');
      const mobileTableViewBtn = document.getElementById('mobileTableViewBtn');

      if (mobileGridViewBtn && mobileTableViewBtn && tableView && gridView) {
        mobileGridViewBtn.addEventListener('click', function() {
          tableView.classList.add('hidden');
          gridView.classList.remove('hidden');
          // Update mobile buttons
          mobileGridViewBtn.classList.add('bg-gray-100', 'text-primary');
          mobileGridViewBtn.classList.remove('bg-white', 'text-gray-600');
          mobileTableViewBtn.classList.add('bg-white', 'text-gray-600');
          mobileTableViewBtn.classList.remove('bg-gray-100', 'text-primary');
          // Sync with desktop buttons
          if (gridViewBtn) {
            gridViewBtn.classList.add('bg-gray-100', 'text-primary');
            gridViewBtn.classList.remove('bg-white', 'text-gray-600');
          }
          if (tableViewBtn) {
            tableViewBtn.classList.add('bg-white', 'text-gray-600');
            tableViewBtn.classList.remove('bg-gray-100', 'text-primary');
          }
        });

        mobileTableViewBtn.addEventListener('click', function() {
          gridView.classList.add('hidden');
          tableView.classList.remove('hidden');
          // Update mobile buttons
          mobileTableViewBtn.classList.add('bg-gray-100', 'text-primary');
          mobileTableViewBtn.classList.remove('bg-white', 'text-gray-600');
          mobileGridViewBtn.classList.add('bg-white', 'text-gray-600');
          mobileGridViewBtn.classList.remove('bg-gray-100', 'text-primary');
          // Sync with desktop buttons
          if (tableViewBtn) {
            tableViewBtn.classList.add('bg-gray-100', 'text-primary');
            tableViewBtn.classList.remove('bg-white', 'text-gray-600');
          }
          if (gridViewBtn) {
            gridViewBtn.classList.add('bg-white', 'text-gray-600');
            gridViewBtn.classList.remove('bg-gray-100', 'text-primary');
          }
        });
      }
// ...existing code...
      // View Toggle functionality
      if (gridViewBtn && tableViewBtn && tableView && gridView) {
        gridViewBtn.addEventListener('click', function() {
          tableView.classList.add('hidden');
          gridView.classList.remove('hidden');
          gridViewBtn.classList.add('bg-gray-100', 'text-primary');
          gridViewBtn.classList.remove('bg-white', 'text-gray-600');
          tableViewBtn.classList.add('bg-white', 'text-gray-600');
          tableViewBtn.classList.remove('bg-gray-100', 'text-primary');
        });

        tableViewBtn.addEventListener('click', function() {
          gridView.classList.add('hidden');
          tableView.classList.remove('hidden');
          tableViewBtn.classList.add('bg-gray-100', 'text-primary');
          tableViewBtn.classList.remove('bg-white', 'text-gray-600');
          gridViewBtn.classList.add('bg-white', 'text-gray-600');
          gridViewBtn.classList.remove('bg-gray-100', 'text-primary');
        });
      }

      // Navigation buttons
      if (newsletterBtn) {
        newsletterBtn.addEventListener('click', function() {
          window.location.href = '/admin/newsletter';
        });
      }
      
      if (blogsBtn) {
        blogsBtn.addEventListener('click', function() {
          window.location.href = '/admin/blogs';
        });
      }

      const requestsBtn = document.getElementById('requestsBtn');
      if (requestsBtn) {
        requestsBtn.addEventListener('click', function() {
          window.location.href = '/admin/requests';
        });
      }

      const chatsBtn = document.getElementById('chatsBtn');
      if (chatsBtn) {
        chatsBtn.addEventListener('click', function() {
          window.location.href = '/admin/chats';
        });
      }

      const addUserBtn = document.getElementById('addUserBtn');
      const addFirstUserBtn = document.getElementById('addFirstUserBtn');
      [addUserBtn, addFirstUserBtn].forEach(btn => {
        if (btn) {
          btn.addEventListener('click', function() {
            window.location.href = '/admin/addUser';
          });
        }
      });

      // Search functionality - works for both table rows and profile cards
      if (searchInput) {
        searchInput.addEventListener('input', function() {
          const searchTerm = this.value.toLowerCase();

          // Search in table rows
          userRows.forEach(row => {
            const name = row.getAttribute('data-name').toLowerCase();
            const username = row.getAttribute('data-username').toLowerCase();
            const contact = row.getAttribute('data-contact').toLowerCase();
            const waliMyContactDetailsRaw = row.getAttribute('data-waliMyContactDetails') || '';
            const waliMyContactDetails = waliMyContactDetailsRaw.replace(/\D/g, '');

            if (name.includes(searchTerm) || username.includes(searchTerm) || contact.includes(searchTerm) || waliMyContactDetails.includes(searchTerm)) {
              row.style.display = '';
            } else {
              row.style.display = 'none';
            }
          });

          // Search in profile cards
          profileCards.forEach(card => {
            const name = card.getAttribute('data-name').toLowerCase();
            const username = card.getAttribute('data-username').toLowerCase();
            const contact = card.getAttribute('data-contact').toLowerCase();
            const waliMyContactDetailsRaw = card.getAttribute('data-waliMyContactDetails') || '';
            const waliMyContactDetails = waliMyContactDetailsRaw.replace(/\D/g, '');

            if (name.includes(searchTerm) || username.includes(searchTerm) || contact.includes(searchTerm) || waliMyContactDetails.includes(searchTerm)) {
              card.style.display = 'block';
            } else {
              card.style.display = 'none';
            }
          });
        });
      }

      // View buttons
     const viewButtons = document.querySelectorAll('.view-btn');
viewButtons.forEach(button => {
  button.addEventListener('click', function() {
    const userId = this.getAttribute('data-user-id');
    window.location.href = `/admin/user/${userId}`;
  });
});


      // Delete buttons
      const deleteButtons = document.querySelectorAll('.delete-btn');
      deleteButtons.forEach(button => {
        button.addEventListener('click', function() {
          const userId = this.getAttribute('data-user-id');
          const row = this.closest('.user-row') || this.closest('.profile-card');
          const name = row.getAttribute('data-name');
          const username = row.getAttribute('data-username');

          currentDeleteUserId = userId;
          currentDeleteElement = row;

          deleteModalUserName.textContent = name;
          deleteModalUserUsername.textContent = `@${username}`;

          deleteConfirmationInput.value = '';
          confirmDeleteBtn.disabled = true;
          deleteInputError.classList.add('hidden');

          deleteModal.classList.remove('hidden');

          setTimeout(() => {
            deleteConfirmationInput.focus();
          }, 100);
        });
      });

      // Modal input validation
      if (deleteConfirmationInput) {
        deleteConfirmationInput.addEventListener('input', function() {
          const value = this.value.trim();
          const isValid = value === 'delete';

          confirmDeleteBtn.disabled = !isValid;

          if (value && !isValid) {
            deleteInputError.classList.remove('hidden');
          } else {
            deleteInputError.classList.add('hidden');
          }
        });
      }

      // Cancel delete modal
      if (cancelDeleteBtn) {
        cancelDeleteBtn.addEventListener('click', function() {
          deleteModal.classList.add('hidden');
          currentDeleteUserId = null;
          currentDeleteElement = null;
        });
      }

      // Confirm delete
      if (confirmDeleteBtn) {
        confirmDeleteBtn.addEventListener('click', async function() {
          if (deleteConfirmationInput.value.trim() !== 'delete') {
            deleteInputError.classList.remove('hidden');
            return;
          }

          if (!currentDeleteUserId || !currentDeleteElement) return;

          this.disabled = true;
          deleteButtonText.textContent = 'Deleting...';
          deleteLoadingIcon.classList.remove('hidden');

          try {
            const response = await fetch(`/admin/user/${currentDeleteUserId}/delete`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              }
            });

            const data = await response.json();

            if (data.success) {
              deleteModal.classList.add('hidden');

              currentDeleteElement.style.transition = 'all 0.3s ease';
              currentDeleteElement.style.opacity = '0';
              currentDeleteElement.style.transform = 'scale(0.95)';

              setTimeout(() => {
                currentDeleteElement.remove();
                showNotification('User Deleted', `${deleteModalUserName.textContent}'s profile has been deleted.`, 'success');

                const remainingRows = document.querySelectorAll('.user-row');
                const remainingCards = document.querySelectorAll('.profile-card');
                if (remainingRows.length === 0 && remainingCards.length === 0) {
                  setTimeout(() => location.reload(), 1000);
                }
              }, 300);
            } else {
              showNotification('Delete Failed', 'Failed to delete user profile.', 'error');
            }
          } catch (error) {
            console.error('Delete error:', error);
            showNotification('Delete Failed', 'An error occurred while deleting the user.', 'error');
          } finally {
            this.disabled = false;
            deleteButtonText.textContent = 'Delete This User';
            deleteLoadingIcon.classList.add('hidden');
            currentDeleteUserId = null;
            currentDeleteElement = null;
          }
        });
      }

      // Approve buttons
      const approveButtons = document.querySelectorAll('.approve-btn');
      approveButtons.forEach(button => {
        button.addEventListener('click', async function() {
          const userId = this.getAttribute('data-user-id');
          const row = this.closest('.user-row') || this.closest('.profile-card');
          const name = row.getAttribute('data-name');
          
          if (!confirm(`Are you sure you want to approve ${name}'s profile?`)) return;
          
          this.disabled = true;
          this.textContent = 'Approving...';
          
          try {
            const response = await fetch(`/api/admin/user/${userId}/approve`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              }
            });
            
            const data = await response.json();
            
            if (data.success) {
              showNotification('Profile Approved', `${name}'s profile has been approved and is now visible.`, 'success');
              
              // Update the row/card data attribute
              row.setAttribute('data-approval-status', 'approved');
              
              // Update approval badge in table view
              const badgeInRow = row.querySelector('td:first-child span');
              if (badgeInRow) {
                badgeInRow.className = 'px-2 py-0.5 bg-green-100 text-green-700 text-xs rounded-full font-medium';
                badgeInRow.textContent = 'Approved';
              }
              
              // Update approval badge in card view
              const badgeInCard = row.querySelector('.aspect-\\[4\\/3\\] span');
              if (badgeInCard) {
                badgeInCard.className = 'absolute top-2 left-2 px-2 py-0.5 bg-green-500 text-white text-xs rounded-full font-medium';
                badgeInCard.textContent = 'Approved';
              }
              
              // Remove approve button (keep reject button)
              this.remove();
              
              // If we were filtering by pending, reload to update counts
              const url = new URL(window.location);
              if (url.searchParams.get('filter') === 'pending') {
                setTimeout(() => location.reload(), 1000);
              }
            } else {
              showNotification('Approval Failed', data.error || 'Failed to approve profile.', 'error');
              this.disabled = false;
              this.textContent = 'Approve';
            }
          } catch (error) {
            console.error('Approve error:', error);
            showNotification('Approval Failed', 'An error occurred while approving the profile.', 'error');
            this.disabled = false;
            this.textContent = 'Approve';
          }
        });
      });

      // Reject buttons
      const rejectButtons = document.querySelectorAll('.reject-btn');
      rejectButtons.forEach(button => {
        button.addEventListener('click', async function() {
          const userId = this.getAttribute('data-user-id');
          const row = this.closest('.user-row') || this.closest('.profile-card');
          const name = row.getAttribute('data-name');
          
          const reason = prompt(`Please provide a reason for rejecting ${name}'s profile (optional):`);
          if (reason === null) return; // User cancelled
          
          this.disabled = true;
          this.textContent = 'Rejecting...';
          
          try {
            const response = await fetch(`/api/admin/user/${userId}/reject`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ reason: reason || '' })
            });
            
            const data = await response.json();
            
            if (data.success) {
              showNotification('Profile Rejected', `${name}'s profile has been rejected.`, 'success');
              
              // Update the row/card data attribute
              row.setAttribute('data-approval-status', 'rejected');
              
              // Update approval badge in table view
              const badgeInRow = row.querySelector('td:first-child span');
              if (badgeInRow) {
                badgeInRow.className = 'px-2 py-0.5 bg-red-100 text-red-700 text-xs rounded-full font-medium';
                badgeInRow.textContent = 'Rejected';
              }
              
              // Update approval badge in card view
              const badgeInCard = row.querySelector('.aspect-\\[4\\/3\\] span');
              if (badgeInCard) {
                badgeInCard.className = 'absolute top-2 left-2 px-2 py-0.5 bg-red-500 text-white text-xs rounded-full font-medium';
                badgeInCard.textContent = 'Rejected';
              }
              
              // Remove the reject button, show approve button if not already there
              const approveBtn = row.querySelector('.approve-btn');
              if (!approveBtn) {
                // Add approve button
                const btnContainer = this.parentElement;
                const newApproveBtn = document.createElement('button');
                newApproveBtn.className = 'approve-btn flex-1 px-2 py-1.5 bg-green-500 text-white hover:bg-green-600 transition-all duration-300 rounded text-xs';
                newApproveBtn.setAttribute('data-user-id', userId);
                newApproveBtn.textContent = 'Approve';
                btnContainer.insertBefore(newApproveBtn, this);
                
                // Add click handler to new button
                newApproveBtn.addEventListener('click', approveButtons[0]?.onclick || async function() {
                  // Reattach approve handler
                  location.reload();
                });
              }
              
              this.remove();
              
              // If we were filtering by pending, reload to update counts
              const url = new URL(window.location);
              if (url.searchParams.get('filter') === 'pending' || url.searchParams.get('filter') === 'approved') {
                setTimeout(() => location.reload(), 1000);
              }
            } else {
              showNotification('Rejection Failed', data.error || 'Failed to reject profile.', 'error');
              this.disabled = false;
              this.textContent = 'Reject';
            }
          } catch (error) {
            console.error('Reject error:', error);
            showNotification('Rejection Failed', 'An error occurred while rejecting the profile.', 'error');
            this.disabled = false;
            this.textContent = 'Reject';
          }
        });
      });

      // Close modal when clicking outside
      if (deleteModal) {
        deleteModal.addEventListener('click', function(e) {
          if (e.target === this) {
            this.classList.add('hidden');
            currentDeleteUserId = null;
            currentDeleteElement = null;
          }
        });
      }

      // Escape key to close modal
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && deleteModal && !deleteModal.classList.contains('hidden')) {
          deleteModal.classList.add('hidden');
          currentDeleteUserId = null;
          currentDeleteElement = null;
        }
      });

      // Stats filter functionality
      statsFilterCards.forEach(card => {
        card.addEventListener('click', function() {
          const filter = this.getAttribute('data-filter');

          statsFilterCards.forEach(c => {
            c.classList.remove('ring-2', 'ring-primary', 'active', 'border-2', 'border-primary');
          });
          this.classList.add('ring-2', 'ring-primary', 'active');

          let visibleCount = 0;

          // Filter table rows
          userRows.forEach(row => {
            const registrationSource = row.getAttribute('data-registration-source');
            const isFeatured = row.getAttribute('data-featured') === 'true';
            const approvalStatus = row.getAttribute('data-approval-status');
            let shouldShow = false;

            if (filter === 'all') {
              shouldShow = true;
            } else if (filter === 'admin') {
              shouldShow = registrationSource === 'admin';
            } else if (filter === 'register') {
              shouldShow = registrationSource === 'register';
            } else if (filter === 'featured') {
              shouldShow = isFeatured;
            } else if (filter === 'pending') {
              shouldShow = approvalStatus === 'pending' || !approvalStatus;
            } else if (filter === 'approved') {
              shouldShow = approvalStatus === 'approved';
            }

            if (shouldShow) {
              row.style.display = '';
              visibleCount++;
            } else {
              row.style.display = 'none';
            }
          });

          // Filter profile cards
          profileCards.forEach(card => {
            const registrationSource = card.getAttribute('data-registration-source');
            const isFeatured = card.getAttribute('data-featured') === 'true';
            const approvalStatus = card.getAttribute('data-approval-status');
            let shouldShow = false;

            if (filter === 'all') {
              shouldShow = true;
            } else if (filter === 'admin') {
              shouldShow = registrationSource === 'admin';
            } else if (filter === 'register') {
              shouldShow = registrationSource === 'register';
            } else if (filter === 'featured') {
              shouldShow = isFeatured;
            } else if (filter === 'pending') {
              shouldShow = approvalStatus === 'pending' || !approvalStatus;
            } else if (filter === 'approved') {
              shouldShow = approvalStatus === 'approved';
            }

            if (shouldShow) {
              card.style.display = 'block';
            } else {
              card.style.display = 'none';
            }
          });

          // Update URL
          const url = new URL(window.location);
          if (filter === 'all') {
            url.searchParams.delete('filter');
          } else {
            url.searchParams.set('filter', filter);
          }
          window.history.replaceState({}, '', url);

          updateFilterIndicator(filter, visibleCount);
        });
      });

      // Filter indicator function
      function updateFilterIndicator(filter, count) {
        const container = document.getElementById('filter-indicator-container');
        const indicator = document.getElementById('filter-indicator');

        if (filter !== 'all') {
          let filterText = '';
          let filterIcon = 'ri-filter-line';

          switch (filter) {
            case 'pending':
              filterText = 'Pending Approval';
              filterIcon = 'ri-time-line';
              break;
            case 'approved':
              filterText = 'Approved Profiles';
              filterIcon = 'ri-checkbox-circle-line';
              break;
            case 'admin':
              filterText = 'Admin Added Users';
              filterIcon = 'ri-admin-line';
              break;
            case 'register':
              filterText = 'Self Registered Users';
              filterIcon = 'ri-user-add-line';
              break;
            case 'featured':
              filterText = 'Featured Profiles';
              filterIcon = 'ri-star-fill';
              break;
            default:
              if (filter.startsWith('employee-')) {
                const employeeName = filter.replace('employee-', '');
                filterText = `Registered by ${employeeName.charAt(0).toUpperCase() + employeeName.slice(1)}`;
                filterIcon = 'ri-team-line';
              } else {
                filterText = 'Filtered Results';
              }
              break;
          }

          indicator.innerHTML = `
            <i class="${filterIcon}"></i>
            <span>Showing ${filterText} (${count} users)</span>
            <button onclick="clearFilter()" class="ml-2 hover:bg-white hover:bg-opacity-20 rounded-full p-1 transition-all duration-200">
              <i class="ri-close-line"></i>
            </button>
          `;
          container.classList.remove('hidden');
        } else {
          container.classList.add('hidden');
        }
      }

      // Global function to clear filter
      window.clearFilter = function() {
        statsFilterCards.forEach(c => c.classList.remove('ring-2', 'ring-primary', 'active'));
        if (statsFilterCards[0]) {
          statsFilterCards[0].classList.add('ring-2', 'ring-primary', 'active');
        }

        userRows.forEach(row => {
          row.style.display = '';
        });

        profileCards.forEach(card => {
          card.style.display = 'block';
        });

        const container = document.getElementById('filter-indicator-container');
        container.classList.add('hidden');

        const url = new URL(window.location);
        url.searchParams.delete('filter');
        window.history.replaceState({}, '', url);
      };

      // Set initial active filter based on URL
      const urlParams = new URLSearchParams(window.location.search);
      const currentFilter = urlParams.get('filter') || 'all';

      if (currentFilter !== 'all') {
        const targetCard = document.querySelector(`[data-filter="${currentFilter}"]`);
        if (targetCard) {
          targetCard.click();
        }
      } else {
        if (statsFilterCards[0]) {
          statsFilterCards[0].classList.add('ring-2', 'ring-primary', 'active');
        }
      }

      // Notification function
      function showNotification(title, message, type = 'info') {
        const notification = document.createElement('div');
        const bgColor = type === 'success' ? 'bg-green-500' : type === 'info' ? 'bg-blue-500' : 'bg-red-500';
        const icon = type === 'success' ? 'ri-checkbox-circle-line' : type === 'info' ? 'ri-information-line' : 'ri-error-warning-line';

        notification.className = `fixed bottom-4 right-4 ${bgColor} text-white rounded-xl p-4 material-shadow-elevated flex items-center gap-3 transform translate-y-0 opacity-100 transition-all duration-300 z-50`;
        notification.innerHTML = `
          <i class="${icon} text-xl"></i>
          <div>
            <p class="font-medium">${title}</p>
            <p class="text-sm opacity-90">${message}</p>
          </div>
        `;

        document.body.appendChild(notification);

        setTimeout(() => {
          notification.style.transform = 'translateY(100%)';
          notification.style.opacity = '0';
          setTimeout(() => notification.remove(), 300);
        }, 3000);
      }

      // Employee dropdown functionality
      const employeeDropdownBtn = document.getElementById('employeeDropdownBtn');
      const employeeDropdownMenu = document.getElementById('employeeDropdownMenu');
      const employeeFilterBtns = document.querySelectorAll('.employee-filter-btn');

      if (employeeDropdownBtn && employeeDropdownMenu) {
        employeeDropdownBtn.addEventListener('click', function(e) {
          e.stopPropagation();
          employeeDropdownMenu.classList.toggle('hidden');

          const arrow = this.querySelector('i');
          if (employeeDropdownMenu.classList.contains('hidden')) {
            arrow.className = 'ri-arrow-down-s-line text-gray-500';
          } else {
            arrow.className = 'ri-arrow-up-s-line text-gray-500';
          }
        });

        document.addEventListener('click', function(e) {
          if (!employeeDropdownBtn.contains(e.target) && !employeeDropdownMenu.contains(e.target)) {
            employeeDropdownMenu.classList.add('hidden');
            const arrow = employeeDropdownBtn.querySelector('i');
            arrow.className = 'ri-arrow-down-s-line text-gray-500';
          }
        });

        employeeFilterBtns.forEach(btn => {
          btn.addEventListener('click', function(e) {
            e.stopPropagation();
            const filter = this.getAttribute('data-filter');
            const employeeName = filter === 'all' ? 'All Registrations' :
              filter.replace('employee-', '').charAt(0).toUpperCase() +
              filter.replace('employee-', '').slice(1);

            const buttonText = employeeDropdownBtn.querySelector('span');
            buttonText.textContent = employeeName;

            employeeDropdownMenu.classList.add('hidden');
            const arrow = employeeDropdownBtn.querySelector('i');
            arrow.className = 'ri-arrow-down-s-line text-gray-500';

            statsFilterCards.forEach(c => {
              c.classList.remove('ring-2', 'ring-primary', 'active', 'border-2', 'border-primary');
            });

            let visibleCount = 0;

            // Filter table rows
            userRows.forEach(row => {
              const passcodeUsed = row.getAttribute('data-passcode') || '';
              let shouldShow = false;

              if (filter === 'all') {
                shouldShow = true;
              } else if (filter.startsWith('employee-')) {
                const employeePrefix = filter.replace('employee-', '');
                shouldShow = passcodeUsed.toLowerCase().startsWith(employeePrefix.toLowerCase() + '-');
              }

              if (shouldShow) {
                row.style.display = '';
                visibleCount++;
              } else {
                row.style.display = 'none';
              }
            });

            // Filter profile cards
            profileCards.forEach(card => {
              const passcodeUsed = card.getAttribute('data-passcode') || '';
              let shouldShow = false;

              if (filter === 'all') {
                shouldShow = true;
              } else if (filter.startsWith('employee-')) {
                const employeePrefix = filter.replace('employee-', '');
                shouldShow = passcodeUsed.toLowerCase().startsWith(employeePrefix.toLowerCase() + '-');
              }

              if (shouldShow) {
                card.style.display = 'block';
              } else {
                card.style.display = 'none';
              }
            });

            const url = new URL(window.location);
            if (filter === 'all') {
              url.searchParams.delete('filter');
            } else {
              url.searchParams.set('filter', filter);
            }
            window.history.replaceState({}, '', url);

            updateFilterIndicator(filter, visibleCount);
          });
        });
      }
    });
  </script>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
  <link rel="manifest" href="/images/site.webmanifest">
  <meta name="theme-color" content="#E91E63">
  <title>D'amour Muslim - Admin Dashboard</title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Playfair+Display:wght@400;600;700&family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css">
  <style>
    :where([class^="ri-"])::before {
      content: "\f3c2";
    }

    .material-shadow {
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .material-shadow-hover {
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    }

    .material-shadow-elevated {
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    .ripple {
      position: relative;
      overflow: hidden;
    }

    .ripple::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.3);
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .ripple:active::before {
      width: 300px;
      height: 300px;
    }

    .gradient-bg {
      background: linear-gradient(135deg, #E91E63 0%, #673AB7 100%);
    }

    .stats-filter-card.active {
      border: 2px solid #E91E63;
      box-shadow: 0 4px 16px rgba(233, 30, 99, 0.15);
    }

    .stats-filter-card:hover {
      transform: translateY(-1px);
    }

    /* Table row styling */
    .user-row {
      transition: background-color 0.2s ease;
    }

    .user-row:hover {
      background-color: #f9fafb;
    }

    /* Modal styles */
    .modal-backdrop {
      backdrop-filter: blur(4px);
    }

    .modal-enter {
      animation: modalEnter 0.3s ease-out forwards;
    }

    .modal-exit {
      animation: modalExit 0.2s ease-in forwards;
    }

    @keyframes modalEnter {
      from {
        opacity: 0;
        transform: scale(0.95) translateY(-10px);
      }

      to {
        opacity: 1;
        transform: scale(1) translateY(0);
      }
    }

    @keyframes modalExit {
      from {
        opacity: 1;
        transform: scale(1) translateY(0);
      }

      to {
        opacity: 0;
        transform: scale(0.95) translateY(-10px);
      }
    }

    /* Input focus styling */
    #deleteConfirmationInput:focus {
      outline: none;
      ring: 2px;
      ring-color: rgb(239 68 68);
      border-color: rgb(239 68 68);
    }

    /* Responsive table */
    @media (max-width: 768px) {
      .user-table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }
    }

    /* Profile card styles for grid view */
    .profile-card {
      transition: all 0.3s ease;
    }

    .profile-card:hover {
      transform: translateY(-2px);
    }
  </style>
</head>

<body class="bg-gray-50 font-['Roboto']">
  <!-- Top Navigation Bar with Search -->
  <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
    <div class="max-w-full mx-auto px-4 py-3">
      <div class="flex items-center justify-between gap-4">
        <!-- Search Bar -->
        <div class="flex-1 max-w-xl">
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="ri-search-line text-gray-400"></i>
            </div>
            <input type="text" id="searchInput" placeholder="Search by username/ name/ phone..." class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary text-gray-900 placeholder-gray-400 bg-white text-sm">
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex items-center gap-3">
          <button id="requestsBtn" class="px-4 py-2 bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 transition-all duration-300 rounded-lg text-sm font-medium">
            Requests
          </button>
          <% if (isAdmin) { %>
          <button id="newsletterBtn" class="px-4 py-2 bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 transition-all duration-300 rounded-lg text-sm font-medium">
            Newsletter
          </button>
          <button id="blogsBtn" class="px-4 py-2 bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 transition-all duration-300 rounded-lg text-sm font-medium">
            Manage Blogs
          </button>
          <button id="addUserBtn" class="px-4 py-2 bg-primary text-white hover:bg-pink-600 transition-all duration-300 rounded-lg text-sm font-medium">
            Add User
          </button>
          <% } %>
          
          <!-- View Toggle Buttons -->
          <div class="flex border border-gray-300 rounded-lg overflow-hidden">
            <button id="gridViewBtn" class="p-2 bg-white hover:bg-gray-50 text-gray-600 transition-all duration-200" title="Grid View">
              <i class="ri-layout-grid-line text-lg"></i>
            </button>
            <button id="tableViewBtn" class="p-2 bg-gray-100 text-primary border-l border-gray-300 transition-all duration-200" title="Table View">
              <i class="ri-list-check text-lg"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </header>

  <main class="py-6 min-h-screen">
    <div class="max-w-full mx-auto px-4">
      <!-- Stats Cards Row -->
      <div class="flex flex-wrap gap-4 mb-6">
        <!-- Total Users -->
        <div class="bg-white rounded-xl px-6 py-4 material-shadow cursor-pointer hover:material-shadow-hover transition-all duration-300 stats-filter-card flex items-center gap-4 min-w-[160px]" data-filter="all">
          <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
            <i class="ri-group-line text-lg text-blue-600"></i>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900"><%= stats.totalUsers %></p>
            <p class="text-xs text-gray-500">Total Users</p>
          </div>
        </div>

        <!-- By Admin -->
        <div class="bg-white rounded-xl px-6 py-4 material-shadow cursor-pointer hover:material-shadow-hover transition-all duration-300 stats-filter-card flex items-center gap-4 min-w-[160px]" data-filter="admin">
          <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
            <i class="ri-admin-line text-lg text-purple-600"></i>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900"><%= stats.registrationSources.byAdmin %></p>
            <p class="text-xs text-gray-500">By Admin</p>
          </div>
        </div>

        <!-- Self Registered -->
        <div class="bg-white rounded-xl px-6 py-4 material-shadow cursor-pointer hover:material-shadow-hover transition-all duration-300 stats-filter-card flex items-center gap-4 min-w-[160px]" data-filter="register">
          <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center">
            <i class="ri-user-add-line text-lg text-orange-600"></i>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900"><%= stats.registrationSources.bySelf %></p>
            <p class="text-xs text-gray-500">Self Registered</p>
          </div>
        </div>

        <!-- Featured Profiles -->
        <div class="bg-white rounded-xl px-6 py-4 material-shadow cursor-pointer hover:material-shadow-hover transition-all duration-300 stats-filter-card flex items-center gap-4 min-w-[160px]" data-filter="featured">
          <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center">
            <i class="ri-star-fill text-lg text-yellow-500"></i>
          </div>
          <div>
            <p class="text-2xl font-bold text-gray-900"><%= stats.featuredCount %></p>
            <p class="text-xs text-gray-500">Featured Profiles</p>
          </div>
        </div>

        <!-- Employee/Referrer Dropdown -->
        <div class="bg-white rounded-xl px-4 py-3 material-shadow relative flex items-center gap-3 min-w-[200px]">
          <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
            <i class="ri-team-line text-lg text-green-600"></i>
          </div>
          <button id="employeeDropdownBtn" class="flex-1 px-3 py-2 text-left bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 transition-colors duration-200 flex items-center justify-between text-sm">
            <span>Select Employee/Referrer</span>
            <i class="ri-arrow-down-s-line text-gray-500"></i>
          </button>

          <!-- Dropdown Menu -->
          <div id="employeeDropdownMenu" class="absolute top-full left-0 right-0 mt-1 bg-white border border-gray-200 rounded-lg shadow-lg z-20 hidden max-h-48 overflow-y-auto">
            <% if (uniqueEmployees && uniqueEmployees.length > 0) { %>
            <button class="employee-filter-btn w-full px-4 py-2 text-left text-sm text-gray-700 hover:bg-gray-50 border-b border-gray-100" data-filter="all">
              <div class="flex items-center justify-between">
                <span>All Registrations</span>
                <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full"><%= stats.totalUsers %></span>
              </div>
            </button>

            <% uniqueEmployees.forEach(employeeName => { %>
            <button class="employee-filter-btn w-full px-4 py-2 text-left text-sm text-gray-700 hover:bg-gray-50 border-b border-gray-100 last:border-b-0" data-filter="employee-<%= employeeName %>">
              <div class="flex items-center justify-between">
                <span class="capitalize"><%= employeeName %></span>
                <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">
                  <%= stats.employeeStats[employeeName] || 0 %>
                </span>
              </div>
            </button>
            <% }) %>
            <% } else { %>
            <div class="px-4 py-3 text-sm text-gray-500 text-center">
              No employee referrals found
            </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- User Management Section -->
      <div class="bg-white rounded-xl material-shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">User Management</h2>
        </div>

        <!-- Filter Indicator (inserted dynamically) -->
        <div id="filter-indicator-container" class="px-6 py-2 hidden">
          <div id="filter-indicator" class="inline-flex items-center gap-2 bg-primary text-white px-4 py-2 rounded-full text-sm"></div>
        </div>

        <!-- Table View -->
        <div id="tableView" class="overflow-x-auto">
          <table class="w-full user-table">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Name</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Location</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Username</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Age</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Email</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Registered By</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% if (users && users.length > 0) { %>
              <% users.forEach(user => { %>
              <tr class="user-row" 
                  data-waliMyContactDetails="<%= user.waliMyContactDetails || '' %>" 
                  data-username="<%= user.username %>" 
                  data-name="<%= user.name || user.username %>" 
                  data-contact="<%= user.contact || '' %>" 
                  data-registration-source="<%= user.registrationSource || 'unknown' %>" 
                  data-featured="<%= user.isFeatured || false %>" 
                  data-passcode="<%= user.passcodeUsed || '' %>">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= user.name || user.username %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-600">
                    <% if (user.city && user.country) { %>
                    <%= user.city %>, <%= user.country %>
                    <% } else if (user.city) { %>
                    <%= user.city %>
                    <% } else if (user.country) { %>
                    <%= user.country %>
                    <% } else { %>
                    <span class="text-gray-400">Location not specified</span>
                    <% } %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-600"><%= user.username %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-600"><%= user.age || '-' %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-600"><%= user.email || '-' %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% 
                    let sourceText = 'Unknown';
                    if (user.registrationSource === 'admin') {
                      sourceText = 'by Admin';
                    } else if (user.registrationSource === 'register') {
                      sourceText = 'Self';
                    }
                  %>
                  <div class="text-sm text-gray-600"><%= sourceText %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center gap-2">
                    <% if (isAdmin) { %>
                    <button class="delete-btn px-3 py-1.5 bg-red-500 text-white hover:bg-red-600 transition-all duration-300 rounded text-xs font-medium" data-user-id="<%= user._id %>">
      Delete
    </button>
    <button class="view-btn px-3 py-1.5 bg-primary text-white hover:bg-pink-600 transition-all duration-300 rounded text-xs font-medium" data-user-id="<%= user._id %>" data-user-slug="<%= user.profileSlug %>">
      View
    </button>
                    <% } else if (isModerator) { %>
                    <button class="view-btn px-3 py-1.5 bg-primary text-white hover:bg-pink-600 transition-all duration-300 rounded text-xs font-medium" data-user-id="<%= user._id %>" data-user-slug="<%= user.profileSlug %>">
                      View Profile
                    </button>
                    <% } %>
                  </div>
                </td>
              </tr>
              <% }) %>
              <% } else { %>
              <tr>
                <td colspan="7" class="px-6 py-12 text-center">
                  <div class="flex flex-col items-center">
                    <i class="ri-user-search-line text-5xl text-gray-300 mb-3"></i>
                    <h3 class="text-lg font-semibold text-gray-600 mb-1">No Users Found</h3>
                    <p class="text-gray-500 mb-4">There are currently no users registered in the system.</p>
                    <% if (isAdmin) { %>
                    <button id="addFirstUserBtn" class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-white rounded-lg hover:bg-pink-600 transition-all duration-300 text-sm">
                      <i class="ri-user-add-line"></i>
                      <span>Add First User</span>
                    </button>
                    <% } %>
                  </div>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Grid View (Hidden by default) -->
        <div id="gridView" class="p-6 hidden">
          <div id="profileGrid" class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
            <% if (users && users.length > 0) { %>
            <% users.forEach(user => { %>
            <div class="profile-card bg-white rounded-xl md:rounded-2xl overflow-hidden border border-gray-200 hover:shadow-lg" 
                 data-waliMyContactDetails="<%= user.waliMyContactDetails || '' %>" 
                 data-username="<%= user.username %>" 
                 data-name="<%= user.name || user.username %>" 
                 data-contact="<%= user.contact || '' %>" 
                 data-registration-source="<%= user.registrationSource || 'unknown' %>" 
                 data-featured="<%= user.isFeatured || false %>" 
                 data-passcode="<%= user.passcodeUsed || '' %>">
              <div class="aspect-[4/3] overflow-hidden bg-gray-100">
                <% if (user.profilePic && user.profilePic.url) { %>
                <img src="<%= user.profilePic.url %>" class="w-full h-full object-cover" alt="<%= user.name || user.username %>'s Profile">
                <% } else { %>
                <div class="w-full h-full flex items-center justify-center">
                  <% if (user.gender === 'male') { %>
                  <img src="/images/boyavatar.png" class="w-20 h-20 rounded-full object-cover" alt="<%= user.name || user.username %>'s Profile">
                  <% } else { %>
                  <img src="/images/girlavatar.png" class="w-20 h-20 rounded-full object-cover" alt="<%= user.name || user.username %>'s Profile">
                  <% } %>
                </div>
                <% } %>
              </div>
              <div class="p-4">
                <div class="flex items-center justify-between mb-2">
                  <h3 class="text-base font-semibold text-gray-900 truncate"><%= user.name || user.username %></h3>
                  <% 
                    let cardSourceText = 'Unknown';
                    let cardSourceClass = 'bg-gray-100 text-gray-600';
                    if (user.registrationSource === 'admin') {
                      cardSourceText = 'by Admin';
                      cardSourceClass = 'bg-purple-100 text-purple-600';
                    } else if (user.registrationSource === 'register') {
                      cardSourceText = 'Self';
                      cardSourceClass = 'bg-orange-100 text-orange-600';
                    }
                  %>
                  <span class="px-2 py-0.5 <%= cardSourceClass %> text-xs rounded-full whitespace-nowrap"><%= cardSourceText %></span>
                </div>
                <div class="text-sm text-gray-500 mb-3">
                  <p class="truncate">@<%= user.username %></p>
                  <% if (user.age) { %><p>Age: <%= user.age %></p><% } %>
                </div>
                <div class="flex gap-2">
                  <% if (isAdmin) { %>
                  <button class="delete-btn flex-1 px-2 py-1.5 bg-red-500 text-white hover:bg-red-600 transition-all duration-300 rounded text-xs" data-user-id="<%= user._id %>">Delete</button>
  <button class="view-btn flex-1 px-2 py-1.5 bg-primary text-white hover:bg-pink-600 transition-all duration-300 rounded text-xs" data-user-id="<%= user._id %>" data-user-slug="<%= user.profileSlug %>">View</button>
                  <% } else if (isModerator) { %>
                  <button class="view-btn w-full px-2 py-1.5 bg-primary text-white hover:bg-pink-600 transition-all duration-300 rounded text-xs" data-user-id="<%= user._id %>" data-user-slug="<%= user.profileSlug %>">View</button>
                  <% } %>
                </div>
              </div>
            </div>
            <% }) %>
            <% } %>
          </div>
        </div>

        <!-- Pagination -->
         <% if (users && users.length > 0) { %>
        <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
          <div class="flex items-center justify-between">
            <div class="text-sm text-gray-600">
              Showing <span id="showingCount"><%= users.length %></span> of <span id="totalCount"><%= pagination.totalUsers %></span> users
            </div>
            <% if (pagination.hasMore) { %>
            <div id="loadMoreContainer">
              <button id="loadMoreBtn" class="px-4 py-2 bg-primary text-white hover:bg-pink-600 transition-all duration-300 rounded-lg text-sm font-medium">
                <i class="ri-refresh-line mr-2"></i>Load More
              </button>
            </div>
            <% } %>
          </div>
          <!-- Loading indicator -->
          <div id="loadingIndicator" class="hidden text-center py-4">
            <i class="ri-loader-4-line animate-spin text-2xl text-primary"></i>
            <p class="text-sm text-gray-500 mt-2">Loading more users...</p>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </main>

  <!-- Delete Modal -->
  <div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-white rounded-2xl p-8 max-w-md mx-4 material-shadow-elevated">
      <!-- Modal Header -->
      <div class="text-center mb-6">
        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="ri-error-warning-line text-3xl text-red-500"></i>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-2">Delete User Profile</h3>
        <p class="text-gray-600">This action cannot be undone. All user data will be permanently deleted.</p>
      </div>

      <!-- User Info Display -->
      <div class="bg-gray-50 rounded-lg p-4 mb-6">
        <div class="flex items-center">
          <div class="w-12 h-12 bg-gray-300 rounded-full flex items-center justify-center mr-3">
            <i class="ri-user-line text-xl text-gray-600"></i>
          </div>
          <div>
            <p class="font-semibold text-gray-900" id="deleteModalUserName">User Name</p>
            <p class="text-sm text-gray-500" id="deleteModalUserUsername">@username</p>
          </div>
        </div>
      </div>

      <!-- Confirmation Text -->
      <div class="mb-6">
        <p class="text-sm font-medium text-gray-700 mb-3">Type "delete" below to confirm deletion of this user:</p>
        <input type="text" id="deleteConfirmationInput" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 text-gray-900 placeholder-gray-400" placeholder="Type 'delete' to confirm" autocomplete="off">
        <div id="deleteInputError" class="hidden text-sm text-red-600 mt-2">
          <i class="ri-error-warning-line mr-1"></i>
          Please type "delete" exactly as shown
        </div>
      </div>

      <!-- Modal Buttons -->
      <div class="flex gap-3">
        <button id="cancelDeleteBtn" class="flex-1 px-6 py-3 border-2 border-gray-300 text-gray-700 hover:bg-gray-50 transition-all duration-300 rounded-lg font-medium">
          Cancel
        </button>
        <button id="confirmDeleteBtn" class="flex-1 px-6 py-3 bg-red-500 text-white hover:bg-red-600 transition-all duration-300 rounded-lg font-medium disabled:bg-gray-300 disabled:cursor-not-allowed" disabled>
          <span id="deleteButtonText">Delete This User</span>
          <i id="deleteLoadingIcon" class="ri-loader-4-line animate-spin ml-2 hidden"></i>
        </button>
      </div>
    </div>
  </div>

  <script id="admin-interactions">
    document.addEventListener('DOMContentLoaded', function() {
      // Element declarations
      const newsletterBtn = document.getElementById('newsletterBtn');
      const blogsBtn = document.getElementById('blogsBtn');
      const searchInput = document.getElementById('searchInput');
      const userRows = document.querySelectorAll('.user-row');
      const profileCards = document.querySelectorAll('.profile-card');
      const statsFilterCards = document.querySelectorAll('.stats-filter-card');
      const deleteModal = document.getElementById('deleteModal');
      const deleteModalUserName = document.getElementById('deleteModalUserName');
      const deleteModalUserUsername = document.getElementById('deleteModalUserUsername');
      const deleteConfirmationInput = document.getElementById('deleteConfirmationInput');
      const deleteInputError = document.getElementById('deleteInputError');
      const cancelDeleteBtn = document.getElementById('cancelDeleteBtn');
      const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
      const deleteButtonText = document.getElementById('deleteButtonText');
      const deleteLoadingIcon = document.getElementById('deleteLoadingIcon');

        const notification = document.createElement('div');
        const bgColor = type === 'success' ? 'bg-green-500' : type === 'info' ? 'bg-blue-500' : 'bg-red-500';
        const icon = type === 'success' ? 'ri-checkbox-circle-line' : type === 'info' ? 'ri-information-line' : 'ri-error-warning-line';

        notification.className = 'fixed bottom-4 right-4 ' + bgColor + ' text-white rounded-xl p-4 material-shadow-elevated flex items-center gap-3 transform translate-y-0 opacity-100 transition-all duration-300 z-50';
        notification.innerHTML = '<i class="' + icon + ' text-xl"></i><div><p class="font-semibold">' + title + '</p><p class="text-sm opacity-90">' + message + '</p></div>';

        document.body.appendChild(notification);

        setTimeout(function() {
          notification.style.transform = 'translateY(100%)';
          notification.style.opacity = '0';
          setTimeout(function() { notification.remove(); }, 300);
        }, 3000);
      }

      // Load more users
      function loadMoreUsers() {
        if (isLoading || !hasMore) return;

        isLoading = true;
        if (loadMoreBtn) loadMoreBtn.disabled = true;
        if (loadingIndicator) loadingIndicator.classList.remove('hidden');

        const filterParam = paginationFilter !== 'all' ? '&filter=' + paginationFilter : '';
        
        fetch('/api/admin/users?page=' + (currentPage + 1) + filterParam)
          .then(function(response) {
            return response.json();
          })
          .then(function(data) {
            if (data.success && data.users && data.users.length > 0) {
              currentPage++;
              hasMore = data.pagination.hasMore;

              // Add to table view
              if (tableBody) {
                data.users.forEach(function(user) {
                  const tempDiv = document.createElement('tbody');
                  tempDiv.innerHTML = createTableRowHtml(user);
                  const newRow = tempDiv.firstElementChild;
                  if (newRow) {
                    tableBody.appendChild(newRow);
                    attachEventListeners(newRow);
                  }
                });
              }

              // Add to grid view
              if (profileGrid) {
                data.users.forEach(function(user) {
                  const tempDiv = document.createElement('div');
                  tempDiv.innerHTML = createGridCardHtml(user);
                  const newCard = tempDiv.firstElementChild;
                  if (newCard) {
                    profileGrid.appendChild(newCard);
                    attachEventListeners(newCard);
                  }
                });
              }

              // Update counts
              if (showingCount) {
                const currentShowing = parseInt(showingCount.textContent) + data.users.length;
                showingCount.textContent = currentShowing;
              }

              // Hide load more if no more pages
              if (!hasMore && loadMoreBtn && loadMoreBtn.parentElement) {
                loadMoreBtn.parentElement.style.display = 'none';
              }
            }
          })
          .catch(function(error) {
            console.error('Error loading more users:', error);
            showPaginationNotification('Error', 'Failed to load more users', 'error');
          })
          .finally(function() {
            isLoading = false;
            if (loadMoreBtn) loadMoreBtn.disabled = false;
            if (loadingIndicator) loadingIndicator.classList.add('hidden');
          });
      }

      // Load more button click
      if (loadMoreBtn) {
        loadMoreBtn.addEventListener('click', loadMoreUsers);
      }

      // Infinite scroll - load when near bottom
      let scrollTimeout;
      window.addEventListener('scroll', function() {
        clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(function() {
          if (isLoading || !hasMore) return;
          
          const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
          const scrollHeight = document.documentElement.scrollHeight;
          const clientHeight = document.documentElement.clientHeight;
          
          // Load more when user is 200px from bottom
          if (scrollTop + clientHeight >= scrollHeight - 200) {
            loadMoreUsers();
          }
        }, 100);
      });
    })();
  </script>

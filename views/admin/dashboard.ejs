        <% if (isAdmin) { %>
        <button id="mobileNewsletterBtn" class="w-full flex items-center gap-3 px-3 py-2.5 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors duration-200">
          <i class="ri-mail-line text-lg text-gray-500"></i>
          <span class="text-sm font-medium">Newsletter</span>

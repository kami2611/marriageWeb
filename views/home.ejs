<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Shop the latest fashion for boys and girls"
    />
    <meta
      name="keywords"
      content="fashion, boys clothing, girls clothing, kids fashion"
    />
    <title>Fashion Store | Home</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <!-- Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body>
    <header class="header">
      <div class="container">
        <div class="logo">
          <a href="/">
            <img src="/imgs/LOGO.png?height=60&width=180" alt="Company Logo" />
          </a>
        </div>
        <div class="auth-buttons">
          <% if (user) { %>
          <a href="/logout" class="btn btn-signup">Logout</a>
          <% } else { %>
          <a href="/register" class="btn btn-signup">Sign Up</a>
          <a href="/login" class="btn btn-login">Login</a>
          <% } %>
        </div>
        <div class="mobile-menu-toggle">
          <i class="fas fa-bars"></i>
        </div>
      </div>
    </header>

    <main>
      <section class="categories">
        <div class="container">
          <div class="category-grid">
            <div class="category-item">
              <a href="/boys">
                <div class="category-image">
                  <img
                    src="/imgs/man.jpg?height=400&width=600"
                    alt="Boys Fashion"
                  />
                  <h2 class="category-title">Boys</h2>
                </div>
              </a>
            </div>
            <div class="category-item">
              <a href="/girls">
                <div class="category-image">
                  <img
                    src="/imgs/portrait-stunning-bride-with-blonde-hair-holding-peach-wedding-bouquet-her-arms.jpg?height=400&width=600"
                    alt="Girls Fashion"
                  />
                  <h2 class="category-title">Girls</h2>
                </div>
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h3>About Us</h3>
            <p>We provide the latest fashion for children of all ages.</p>
          </div>
          <div class="footer-section">
            <h3>Contact</h3>
            <p>Email: info@example.com</p>
            <p>Phone: (123) 456-7890</p>
          </div>
          <div class="footer-section">
            <h3>Follow Us</h3>
            <div class="social-icons">
              <a href="#"><i class="fab fa-facebook"></i></a>
              <a href="#"><i class="fab fa-instagram"></i></a>
              <a href="#"><i class="fab fa-twitter"></i></a>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2025 Fashion Store. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Mobile menu toggle
        const menuToggle = document.querySelector(".mobile-menu-toggle");
        const authButtons = document.querySelector(".auth-buttons");

        if (menuToggle && authButtons) {
          menuToggle.addEventListener("click", function () {
            authButtons.classList.toggle("active");
          });
        }

        // Close menu when clicking outside
        document.addEventListener("click", function (event) {
          if (
            !event.target.closest(".mobile-menu-toggle") &&
            !event.target.closest(".auth-buttons") &&
            authButtons &&
            authButtons.classList.contains("active")
          ) {
            authButtons.classList.remove("active");
          }
        });

        // Add smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
          anchor.addEventListener("click", function (e) {
            e.preventDefault();

            const targetId = this.getAttribute("href");
            if (targetId === "#") return;

            const targetElement = document.querySelector(targetId);
            if (targetElement) {
              targetElement.scrollIntoView({
                behavior: "smooth",
              });
            }
          });
        });
      });
    </script>
  </body>
</html>
